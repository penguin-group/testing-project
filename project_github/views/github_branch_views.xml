<odoo>
    <record id="github_branch_action" model="ir.actions.act_window">
        <field name="name">GitHub Branches</field>
        <field name="res_model">github.branch</field>
        <field name="view_mode">list</field>
        <field name="context">{'default_task_id': active_id}</field>
    </record>

    <record id="github_branch_list_view" model="ir.ui.view">
        <field name="name">github.branch.list</field>
        <field name="model">github.branch</field>
        <field name="arch" type="xml">
            <list string="GitHub Branches" editable="bottom" create="false" edit="false" delete="false">
                <field name="name"/>
                <field name="task_id" optional="hide"/>
                <field name="commit_sha"/>
                <field name="url" widget="url" text="Open"/>
            </list>
        </field>
    </record>
</odoo>