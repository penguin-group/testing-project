<odoo>
    <record id="github_commit_action" model="ir.actions.act_window">
        <field name="name">GitHub Commits</field>
        <field name="res_model">github.commit</field>
        <field name="view_mode">list</field>
        <field name="context">{'default_task_id': active_id}</field>
    </record>

    <record id="github_commit_list_view" model="ir.ui.view">
        <field name="name">github.commit.list</field>
        <field name="model">github.commit</field>
        <field name="arch" type="xml">
            <list string="GitHub Commits" editable="bottom" create="false" edit="false" delete="false">
                <field name="sha"/>
                <field name="name" optional="show"/>
                <field name="commit_date" optional="show"/>
                <field name="author_name" optional="hide"/>
                <field name="author_email" optional="hide"/>
                <field name="task_id" optional="hide"/>
                <field name="url" widget="url" text="Open"/>
            </list>
        </field>
    </record>
</odoo>