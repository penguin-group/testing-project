<odoo>
    <record id="edit_project_inherit" model="ir.ui.view">
        <field name="name">edit.project.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_tasks_managment']" position="after">
                <group name="group_development" string="Software Development" col="1" class="row mt16 o_settings_container" groups="project.group_project_manager">
                    <div>
                        <setting class="col-lg-12" id="project_milestone_setting" help="Enable development project features." 
                            groups="project.group_project_manager">
                            <field name="is_development_project"/>
                            <div invisible="not is_development_project" class="mt-3">
                                <div class="row mt-3">
                                    <div class="col-auto pe-0">
                                        <label for="repo" class="fw-bold"/>
                                    </div>
                                    <div class="col-9 ps-0">
                                        <field name="repo" class="ps-3 w-100" options="{'no_create': True, 'no_create_edit': True}"/>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-auto pe-0">
                                        <label for="openai_api_key" class="fw-bold"/>
                                    </div>
                                    <div class="col-9 ps-0">
                                        <field name="openai_api_key" class="ps-3 w-100"/>
                                    </div>
                                </div>
                            </div>
                        </setting>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>