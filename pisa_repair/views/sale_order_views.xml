<odoo>
    <record id="view_sale_order_list_hide_total_for_micro" model="ir.ui.view">
        <field name="name">sale.order.list.micro.hidden</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="attributes">
                <attribute name="invisible">is_only_micro</attribute>
            </xpath>
        </field>
    </record>
</odoo>