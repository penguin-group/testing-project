<odoo>
    <record id="view_order_form_inherit_product_2" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.product_2</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='product_template_id']"
                position="after">
                <field name="related_quotation_ids" widget="many2one"
                    column_invisible="parent.is_consolidated == False" />
                <field name="lot_serial" column_invisible="parent.is_consolidated == False" />
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_consolidated" invisible='1' />
                <field name="has_repair_orders" invisible="1" />

            </xpath>

            <xpath expr="//button[@name='action_quotation_send']" position="attributes">
                <attribute name="invisible">is_only_micro</attribute>
            </xpath>

            <xpath expr="//button[@name='action_preview_sale_order']" position="attributes">
                <attribute name="invisible">is_only_micro</attribute>
            </xpath>

            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute name="invisible">is_only_micro</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_only_micro" invisible="1"/>
            </xpath>

            <xpath expr="//page[@name='optional_products']" position="attributes">
                <attribute name="invisible">is_only_micro</attribute>
            </xpath>

            <xpath expr="//page[@name='other_information']" position="attributes">
                <attribute name="invisible">is_only_micro</attribute>
            </xpath>

            <xpath expr="//page[@name='customer_signature']" position="attributes">
                <attribute name="invisible">is_only_micro</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']"
                position="attributes">
                <attribute name="column_invisible">parent.is_only_micro</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='tax_id']"
                position="attributes">
                <attribute name="column_invisible">parent.is_only_micro</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='discount']"
                position="attributes">
                <attribute name="column_invisible">parent.is_only_micro</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='price_subtotal']"
                position="attributes">
                <attribute name="column_invisible">parent.is_only_micro</attribute>
            </xpath>
            <xpath expr="//group[@name='sale_total']" position="attributes">
                <attribute name="invisible">is_only_micro</attribute>
            </xpath>

            <xpath expr="//div[@name='so_button_below_order_lines']" position="attributes">
                <attribute name="invisible">is_only_micro</attribute>
            </xpath>

            <xpath
                expr="//field[@name='order_line']/list/control/button[@name='action_add_from_catalog']"
                position="attributes">
                <attribute name="groups">!pisa_repair.group_micro</attribute>
            </xpath>

            <xpath
                expr="//field[@name='order_line']/kanban/control/button[@name='action_add_from_catalog']"
                position="attributes">
                <attribute name="groups">!pisa_repair.group_micro</attribute>
            </xpath>

        </field>
    </record>
</odoo>