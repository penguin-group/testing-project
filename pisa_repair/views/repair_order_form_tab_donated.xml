<odoo>
    <record id="repair_order_form_tab_donated_components" model="ir.ui.view">
        <field name="name">repair.order.form.tab.donated.components</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">

            <!-- Insertamos despuÃ©s de la pestaÃ±a 'microelectronics_data' -->
            <xpath expr="//page[@name='microelectronics_data']" position="after">
                
                <page name="donated_components" string="Donated Components"  invisible="not is_micro or ('donor' not in tag_names and 'scrapped' not in tag_names)" >
                    <field name="donated_component_ids" readonly="1">
                        <list string="Donated Components">
                            <field name="name" string="Component"/>
                            <field name="serial_number" string="Serial Number"/>
                            <field name="description" string="Description"/>
                            <field name="used" string="Used"/>
                            <field name="ticket_dest_id" string="Destination Ticket"/>
                        </list>

                    </field>
                </page>
            </xpath>

        </field>
    </record>
</odoo>