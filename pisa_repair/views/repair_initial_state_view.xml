<odoo>
    <data>
        <record id="view_repair_initial_state_tree" model="ir.ui.view">
            <field name="name">repair.initial.state.tree.view</field>
            <field name="model">repair.initial.state</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <button name="unlink" string="Delete" type="object"
                        class="btn-danger"
                        confirm="Are you sure you want to delete this record?" />
                </list>
            </field>
        </record>

        <record id="view_repair_initial_state_form" model="ir.ui.view">
            <field name="name">repair.initial.state.form.view</field>
            <field name="model">repair.initial.state</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" string="Initial State Name" />
                            <field name="repair_order_ids" invisible="1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>