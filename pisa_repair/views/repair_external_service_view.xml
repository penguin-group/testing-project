<odoo>
    <data>
        <record id="view_repair_external_service_tree" model="ir.ui.view">
            <field name="name">repair.external.service.tree.view</field>
            <field name="model">repair.external.service</field>
            <field name="arch" type="xml">
                <list string="External Services">
                    <field name="name" />
                    <button name="unlink" string="Delete" type="object"
                        class="btn-danger"
                        confirm="Are you sure you want to delete this fault?" />
                </list>
            </field>
        </record>

        <record id="view_repair_external_service_form" model="ir.ui.view">
            <field name="name">repair.external.service.form</field>
            <field name="model">repair.external.service</field>
            <field name="arch" type="xml">
                <form string="External Service">
                    <sheet>
                        <group>
                            <field name="name" string="Service Name" />
                            <field name="repair_order_ids" invisible="1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>