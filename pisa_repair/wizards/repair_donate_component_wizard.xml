<odoo>
    <record id="view_repair_donate_component_wizard" model="ir.ui.view">
        <field name="name">repair.donate.component.wizard.form</field>
        <field name="model">repair.donate.component.wizard</field>
        <field name="arch" type="xml">
            <form string="Registrar Componentes Donados">
                <sheet>
                    <group>
                        <field name="component_ids">
                            <list editable="bottom">
                                <field name="name"/>
                                <field name="serial_number"/>
                                <field name="description"/>
                            </list>
                            <form>
                                <group>
                                    <field name="name"/>
                                    <field name="serial_number"/>
                                    <field name="description"/>
                                </group>
                            </form>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirmar" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_repair_donate_component_wizard" model="ir.actions.act_window">
        <field name="name">Registrar Componentes Donados</field>
        <field name="res_model">repair.donate.component.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>