<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>

       <record model="ir.module.category" id="agreement.module_category_agreement">
           <field name="name">Agreement</field>
           <field name="description">Helps you handle agreement actions and permissions.</field>
           <field name="parent_id" ref="base.module_category_agreement" />
       </record>

       <record model="res.groups" id="group_agreement_own_agreements_only">
           <field name="name">Agreement: Own Agreements Only</field>
           <field name="category_id" ref="base.module_category_hidden"/>
       </record>

       <record model="res.groups" id="group_agreement_viewer">
           <field name="name">Agreement: Read-only</field>
           <field name="category_id" ref="agreement.module_category_agreement"/>
           <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
       </record>

       <record model="res.groups" id="group_agreement_legal_officer">
           <field name="name">Agreement: Legal Officer</field>
           <field name="category_id" ref="agreement.module_category_agreement"/>
           <field name="implied_ids" eval="[(4, ref('agreement.group_agreement_viewer'))]"/>
       </record>

       <record model="res.groups" id="group_agreement_admin">
           <field name="name">Agreement: Administration</field>
           <field name="category_id" ref="agreement.module_category_agreement"/>
           <field name="implied_ids" eval="[(4, ref('agreement.group_agreement_legal_officer'))]"/>
       </record>

   </data>
</odoo>