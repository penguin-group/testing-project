<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_agreement_milestone" model="ir.actions.act_window">
        <field name="name">Milestone</field>
        <field name="res_model">agreement.milestone</field>
        <field name="view_mode">list</field>
    </record>

    <record id="agreement_milestone_view_list" model="ir.ui.view">
        <field name="name">agreement.milestone.view.list</field>
        <field name="model">agreement.milestone</field>
        <field name="arch" type="xml">
            <list decoration-muted="is_reached" editable="bottom" sample="1">
                <field name="name"/>
                <field name="agreement_id" />
                <field name="deadline" optional="show"/>
                <field name="is_reached" optional="show"/>
            </list>
        </field>
    </record>
</odoo>