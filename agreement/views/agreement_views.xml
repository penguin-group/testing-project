<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_agreement" model="ir.actions.act_window">
        <field name="name">Agreements</field>
        <field name="res_model">agreement</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <record id="view_agreement_list" model="ir.ui.view">
        <field name="name">agreement.list</field>
        <field name="model">agreement</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="stage_id"/>
                <field name="agreement_type"/>
                <field name="legal_process_type" optional="hide"/>
                <field name="renewal_terms" optional="hide"/>
                <field name="jurisdiction" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_agreement_form" model="ir.ui.view">
        <field name="name">agreement.form</field>
        <field name="model">agreement</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_ids" widget="many2many_tags" />
                            <field name="signature_date"/>
                            <field name="start_date" widget="daterange" options="{'end_date_field': 'end_date'}" />
                            <field name="end_date" invisible="1"/>
                            <field name="code" />
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="agreement_type"/>
                            <field name="legal_process_type"/>
                            <field name="renewal_terms"/>
                            <field name="jurisdiction"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Key Obligations" >
                            <field name="key_obligations" />
                        </page>
                        <page string="Document Management">
                            <group>
                                <field name="file_location" widget="url" />
                            </group>
                            <field name="related_agreements" />
                        </page>
                        <page string="Agreement Milestones">
                            <field name="milestone_ids">
                                <list editable="bottom">
                                    <field name="name" />
                                    <field name="deadline" />
                                    <field name="is_reached" />
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_agreement_kanban" model="ir.ui.view">
       <field name="name">agreement.kanban</field>
       <field name="model">agreement</field>
       <field name="arch" type="xml">
           <kanban class="o_kanban_mobile"
                   default_group_by="stage_id"
                   groups_draggable="1"
                   sample="1"
                   on_create="quick_create">
               <templates>
                   <t t-name="card">
                       <div class="d-flex mb-2" style="justify-content: space-between;">
                           <field name="name" class="fw-bolder fs-5" />
                       </div>
                   </t>
               </templates>
           </kanban>
       </field>
   </record>
</odoo>
