<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- model.name inherit form view -->
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='journal_div']" position="after">
                    <label for="nro_nota_remision"/>
                    <div>
                        <field name="nro_nota_remision"/>
                    </div>
                    <label for="nro_factura_relacionada" attrs="{'invisible':[('move_type','not in',['out_refund','in_refund'])]}"/>
                    <div>
                        <field name="nro_factura_relacionada" attrs="{'invisible':[('move_type','not in',['out_refund','in_refund'])]}"/>
                    </div>
                </xpath>
                <xpath expr="//label[@for='ref']" position="attributes">
                    <attribute name="string">Numero de Factura</attribute>
                </xpath>
                <xpath expr="//field[@name='ref']" position="attributes">
                    <attribute name="string">Numero de Factura</attribute>
                    <attribute name="placeholder">Ej: 001-001-0000001</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
