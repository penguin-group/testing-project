<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Other Income Input -->
        <record id="payslip_input_other_income" model="hr.payslip.input.type">
            <field name="name">Otros Ingresos</field>
            <field name="code">OTHER_INCOME</field>
            <field name="country_id" ref="base.py"/>
        </record>

        <!-- Bonus Input -->
        <record id="payslip_input_bonus" model="hr.payslip.input.type">
            <field name="name">Bono</field>
            <field name="code">BONUS</field>
            <field name="country_id" ref="base.py"/>
        </record>

        <!-- Overtime Day Hours Input -->
        <record id="payslip_input_overtime_day_hours" model="hr.payslip.input.type">
            <field name="name">Horas Extras Diurnas</field>
            <field name="code">OVERTIME_DAY_HOURS</field>
            <field name="country_id" ref="base.py"/>
        </record>

        <!-- Overtime Night Hours Input -->
        <record id="payslip_input_overtime_night_hours" model="hr.payslip.input.type">
            <field name="name">Horas Extras Nocturnas</field>
            <field name="code">OVERTIME_NIGHT_HOURS</field>
            <field name="country_id" ref="base.py"/>
        </record>

        <!-- Holiday Day Hours Input -->
        <record id="payslip_input_holiday_day_hours" model="hr.payslip.input.type">
            <field name="name">Horas Feriado Diurno</field>
            <field name="code">HOLIDAY_DAY_HOURS</field>
            <field name="country_id" ref="base.py"/>
        </record>

        <!-- Holiday Night Hours Input -->
        <record id="payslip_input_holiday_night_hours" model="hr.payslip.input.type">
            <field name="name">Horas Feriado Nocturno</field>
            <field name="code">HOLIDAY_NIGHT_HOURS</field>
            <field name="country_id" ref="base.py"/>
        </record>

        <!-- Night Surcharge Hours Input -->
        <record id="payslip_input_night_surcharge_hours" model="hr.payslip.input.type">
            <field name="name">Horas Recargo Nocturno</field>
            <field name="code">NIGHT_SURCHARGE_HOURS</field>
            <field name="country_id" ref="base.py"/>
        </record>

        <!-- Vacation Days Input -->
        <record id="payslip_input_vacation_days" model="hr.payslip.input.type">
            <field name="name">Días de Vacaciones</field>
            <field name="code">VACATION_DAYS</field>
            <field name="country_id" ref="base.py"/>
        </record>

        <!-- Medical Leave Days Input -->
        <record id="payslip_input_medical_leave_days" model="hr.payslip.input.type">
            <field name="name">Días de Licencia Médica</field>
            <field name="code">MEDICAL_LEAVE_DAYS</field>
            <field name="country_id" ref="base.py"/>
        </record>

        <!-- Other Non-Deductible Income Input -->
        <record id="payslip_input_other_non_deductible" model="hr.payslip.input.type">
            <field name="name">Otros Ingresos No Deducibles</field>
            <field name="code">OTHER_NON_DEDUCTIBLE</field>
            <field name="country_id" ref="base.py"/>
        </record>

        <!-- Salary Advance Input -->
        <record id="payslip_input_salary_advance" model="hr.payslip.input.type">
            <field name="name">Anticipo de Salario</field>
            <field name="code">SALARY_ADVANCE</field>
            <field name="country_id" ref="base.py"/>
            <field name="available_in_attachments" eval="True"/>
        </record>

        <!-- Medical Insurance Input (from actual payslip) -->
        <record id="payslip_input_medical_insurance" model="hr.payslip.input.type">
            <field name="name">Seguro Médico</field>
            <field name="code">MEDICAL_INSURANCE</field>
            <field name="country_id" ref="base.py"/>
            <field name="available_in_attachments" eval="True"/>
        </record>

        <!-- Solidarity Contribution Input -->
        <record id="payslip_input_solidarity" model="hr.payslip.input.type">
            <field name="name">Solidaridad</field>
            <field name="code">SOLIDARITY</field>
            <field name="country_id" ref="base.py"/>
            <field name="available_in_attachments" eval="True"/>
        </record>

        <!-- Training Deduction Input -->
        <record id="payslip_input_training_deduction" model="hr.payslip.input.type">
            <field name="name">Descuento Capacitación</field>
            <field name="code">TRAINING_DEDUCTION</field>
            <field name="country_id" ref="base.py"/>
            <field name="available_in_attachments" eval="True"/>
        </record>

        <!-- Parking Deduction Input -->
        <record id="payslip_input_parking_deduction" model="hr.payslip.input.type">
            <field name="name">Descuento Estacionamiento</field>
            <field name="code">PARKING_DEDUCTION</field>
            <field name="country_id" ref="base.py"/>
            <field name="available_in_attachments" eval="True"/>
        </record>

        <!-- English Classes Deduction Input -->
        <record id="payslip_input_english_deduction" model="hr.payslip.input.type">
            <field name="name">Descuento Clases de Inglés</field>
            <field name="code">ENGLISH_DEDUCTION</field>
            <field name="country_id" ref="base.py"/>
            <field name="available_in_attachments" eval="True"/>
        </record>

        <!-- Loan Deduction Input -->
        <record id="payslip_input_loan_deduction" model="hr.payslip.input.type">
            <field name="name">Descuento Préstamo</field>
            <field name="code">LOAN_DEDUCTION</field>
            <field name="country_id" ref="base.py"/>
            <field name="available_in_attachments" eval="True"/>
        </record>

    </data>
</odoo>