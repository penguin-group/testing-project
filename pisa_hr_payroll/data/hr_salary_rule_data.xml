result += -inputs['TRAINING'].amount if 'TRAINING' in inputs else 0
result += -inputs['LOAN'].amount if 'LOAN' in inputs else 0
            </field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="struct_id" ref="hr_payroll_structure_py_employee_salary"/>
        </record>

        <!-- 7. FINAL TOTALS -->
        
        <!-- Total Deductions -->
        <record id="hr_salary_rule_total_deductions_py" model="hr.salary.rule">
            <field name="name">Total Descuentos</field>
            <field name="code">TOTAL_DED_PY</field>
            <field name="category_id" ref="hr_salary_rule_category_total_deductions_py"/>
            <field name="sequence">260</field>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
# TOTAL EGRESOS = IPS 9% + ANTICIPOS + EMBARGO JUDICIAL + SEGURO MÉDICO + 
#                 ESTACIONAMIENTO + CAPACITACIÓN + PRÉSTAMO + OTROS DESCUENTOS
# All deduction values should be negative

# Start with 0
result = 0

result += result_rules.get('IPS_EMP_PY', {}).get('total', 0)
result += result_rules.get('ADVANCE_PY', {}).get('total', 0)
result += result_rules.get('GARNISH_PY', {}).get('total', 0)
result += result_rules.get('MEDICAL_INS_PY', {}).get('total', 0)
result += result_rules.get('SOLIDARITY_PY', {}).get('total', 0)
result += result_rules.get('PARKING_PY', {}).get('total', 0)
result += result_rules.get('TRAINING_PY', {}).get('total', 0)
result += result_rules.get('LOAN_PY', {}).get('total', 0)
result += result_rules.get('OTHER_DED_PY', {}).get('total', 0)
            </field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="struct_id" ref="hr_payroll_structure_py_employee_salary"/>
        </record>

        <!-- Net Amount to Pay - Override default rule -->
        <record id="hr_payroll.default_net_salary" model="hr.salary.rule">
            <field name="name">Neto a Pagar</field>
            <field name="code">NET</field>
            <field name="category_id" ref="hr_payroll.NET"/>
            <field name="sequence">270</field>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
# SALARIO NETO A COBRAR = TOTAL INGRESOS - TOTAL EGRESOS
# Since deductions are negative, we add them (subtraction)

result = 0

result += result_rules.get('GROSS', {}).get('total', 0)
result += result_rules.get('TOTAL_DED_PY', {}).get('total', 0)
            </field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="struct_id" ref="hr_payroll_structure_py_employee_salary"/>
        </record>

        <!-- 8. TERMINATION AND BENEFITS -->

        <!-- Christmas Bonus (Aguinaldo) - Only paid in December -->
        <record id="hr_salary_rule_aguinaldo_py" model="hr.salary.rule">
            <field name="name">Aguinaldo</field>
            <field name="code">AGUINALDO_PY</field>
            <field name="category_id" ref="hr_salary_rule_category_allowances_py"/>
            <field name="sequence">280</field>
            <field name="condition_select">python</field>
            <field name="condition_python">
# Only calculate in December
result = payslip.date_to.month == 12
            </field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute"><![CDATA[
# Aguinaldo = Sum of all IPS_BASE_PY over the year divided by 12
# Only paid in December

if payslip.date_to.month == 12:
    # Get the year
    year = payslip.date_to.year
    
    # Search for all payslips of the same employee in the current year
    domain = [
        ('employee_id', '=', payslip.employee_id.id),
        ('date_from', '>=', str(year) + '-01-01'),
        ('date_to', '<=', str(year) + '-12-31'),
        ('state', 'in', ['done', 'paid'])
    ]
    year_payslips = payslip.env['hr.payslip'].search(domain)
    
    # Sum all IPS_BASE_PY amounts from the year
    total_gross = sum(p.line_ids.filtered(lambda l: l.code == 'IPS_BASE_PY').total for p in year_payslips)
    
    # Aguinaldo = total gross / 12
    result = total_gross / 12 if total_gross else 0
else:
    result = 0
            ]]></field>
            <field name="appears_on_payslip" eval="False"/>
            <field name="struct_id" ref="hr_payroll_structure_py_employee_salary"/>
        </record>

        <!-- Notice Period Pay (Pre aviso) -->
        <record id="hr_salary_rule_notice_pay_py" model="hr.salary.rule">
            <field name="name">Pre aviso</field>
            <field name="code">NOTICE_PAY_PY</field>
            <field name="category_id" ref="hr_salary_rule_category_allowances_py"/>
            <field name="sequence">290</field>
            <field name="condition_select">python</field>
            <field name="condition_python">result = 'NOTICE_PAY' in inputs and inputs['NOTICE_PAY'].amount > 0</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
# Notice period pay (usually 1-2 months of salary)
result = inputs['NOTICE_PAY'].amount if 'NOTICE_PAY' in inputs else 0
            </field>
            <field name="appears_on_payslip" eval="False"/>
            <field name="struct_id" ref="hr_payroll_structure_py_employee_salary"/>
        </record>

        <!-- Severance Pay (Indemnización) -->
        <record id="hr_salary_rule_severance_py" model="hr.salary.rule">
            <field name="name">Indemnización</field>
            <field name="code">SEVERANCE_PY</field>
            <field name="category_id" ref="hr_salary_rule_category_allowances_py"/>
            <field name="sequence">300</field>
            <field name="condition_select">python</field>
            <field name="condition_python">result = 'SEVERANCE_PAY' in inputs and inputs['SEVERANCE_PAY'].amount > 0</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
# Severance pay (varies based on length of service and reason for termination)
result = inputs['SEVERANCE_PAY'].amount if 'SEVERANCE_PAY' in inputs else 0
            </field>
            <field name="appears_on_payslip" eval="False"/>
            <field name="struct_id" ref="hr_payroll_structure_py_employee_salary"/>
        </record>

        <!-- Proportional Christmas Bonus (Monthly provision) -->
        <record id="hr_salary_rule_aguinaldo_proportional_py" model="hr.salary.rule">
            <field name="name">Aguinaldo Proporcional</field>
            <field name="code">AGUINALDO_PROP_PY</field>
            <field name="category_id" ref="hr_salary_rule_category_provisions_py"/>
            <field name="sequence">310</field>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
# Monthly provision for Aguinaldo = IPS_BASE_PY / 12
# This is for accounting purposes to provision the annual bonus monthly
gross_amount = result_rules.get('IPS_BASE_PY', {}).get('total', 0)
result = gross_amount / 12 if gross_amount else 0
            </field>
            <field name="appears_on_payslip" eval="False"/>
            <field name="struct_id" ref="hr_payroll_structure_py_employee_salary"/>
        </record>

        <!-- Proportional Vacation Pay (Monthly provision) -->
        <record id="hr_salary_rule_vacation_proportional_py" model="hr.salary.rule">
            <field name="name">Vacaciones Proporcionales</field>
            <field name="code">VACATION_PROP_PY</field>
            <field name="category_id" ref="hr_salary_rule_category_provisions_py"/>
            <field name="sequence">320</field>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
# Monthly provision for vacation pay = IPS_BASE_PY / 12
# This is for accounting purposes to provision vacation pay monthly
gross_amount = result_rules.get('IPS_BASE_PY', {}).get('total', 0)
result = gross_amount / 12 if gross_amount else 0
            </field>
            <field name="appears_on_payslip" eval="False"/>
            <field name="struct_id" ref="hr_payroll_structure_py_employee_salary"/>
        </record>

        <!-- 9. EMPLOYER CONTRIBUTIONS -->

        <!-- AOP - Employer IPS Contribution (16.5%) -->
        <record id="hr_salary_rule_aop_employer_py" model="hr.salary.rule">
            <field name="name">AOP 16,5%</field>
            <field name="code">AOP_EMP_PY</field>
            <field name="category_id" ref="hr_salary_rule_category_employer_contributions_py"/>
            <field name="sequence">330</field>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
# AOP Employer: 16.5% of IPS base (same base as employee IPS)
# This is not paid by employee, it's an employer cost
ips_base = result_rules.get('IPS_BASE_PY', {}).get('total', 0)
result = ips_base * 0.165  # 16.5% employer contribution
            </field>
            <field name="appears_on_payslip" eval="False"/>
            <field name="struct_id" ref="hr_payroll_structure_py_employee_salary"/>
        </record>

    </data>
