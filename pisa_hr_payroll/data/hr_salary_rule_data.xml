<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- 1. BASIC SALARY RULES -->
        
        <!-- Basic Salary (Proportional) -->
        <record id="hr_salary_rule_basic_py" model="hr.salary.rule">
            <field name="name">Salario Proporcional</field>
            <field name="code">BASIC_PY</field>
            <field name="category_id" ref="hr_salary_rule_category_basic_py"/>
            <field name="sequence">10</field>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
# Calculate proportional salary based on worked days
worked_days_total = worked_days.WORK100.number_of_days if worked_days.WORK100 else payslip.rule_parameter('working_days_per_month')
daily_wage = contract.wage / payslip.rule_parameter('working_days_per_month')
result = daily_wage * worked_days_total
            </field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="struct_id" ref="hr_payroll_structure_py_employee_salary"/>
        </record>

        <!-- 2. ALLOWANCES AND INCOME -->
        
        <!-- Other Income -->
        <record id="hr_salary_rule_other_income_py" model="hr.salary.rule">
            <field name="name">Otros Ingresos</field>
            <field name="code">OTHER_INC_PY</field>
            <field name="category_id" ref="hr_salary_rule_category_allowances_py"/>
            <field name="sequence">20</field>
            <field name="condition_select">python</field>
            <field name="condition_python">result = inputs.OTHER_INCOME and inputs.OTHER_INCOME.amount > 0</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = inputs.OTHER_INCOME.amount if inputs.OTHER_INCOME else 0</field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="struct_id" ref="hr_payroll_structure_py_employee_salary"/>
        </record>

        <!-- Medical Leave (Licencias) -->
        <record id="hr_salary_rule_medical_leave_py" model="hr.salary.rule">
            <field name="name">Licencias</field>
            <field name="code">MEDICAL_LEAVE_PY</field>
            <field name="category_id" ref="hr_salary_rule_category_vacation_py"/>
            <field name="sequence">30</field>
            <field name="condition_select">python</field>
            <field name="condition_python">result = inputs.MEDICAL_LEAVE_DAYS and inputs.MEDICAL_LEAVE_DAYS.amount > 1</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
# Medical leave: 1 day = no deduction, 2-3 days = 50% company reimbursement
if inputs.MEDICAL_LEAVE_DAYS and inputs.MEDICAL_LEAVE_DAYS.amount > 1:
    daily_wage = contract.wage / payslip.rule_parameter('working_days_per_month')
    leave_days = min(inputs.MEDICAL_LEAVE_DAYS.amount - 1, 2)  # Max 2 days reimbursement
    result = daily_wage * leave_days * payslip.rule_parameter('medical_leave_rate')
else:
    result = 0
            </field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="struct_id" ref="hr_payroll_structure_py_employee_salary"/>
        </record>

