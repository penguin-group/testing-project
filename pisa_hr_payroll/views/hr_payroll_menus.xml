<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Paraguay Payroll Configuration Menu -->
        <menuitem
            id="menu_hr_payroll_py_config"
            name="Configuración Paraguay"
            parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"
            sequence="100"/>

        <!-- Salary Rule Categories -->
        <record id="action_hr_salary_rule_category_py" model="ir.actions.act_window">
            <field name="name">Categorías de Reglas Paraguay</field>
            <field name="res_model">hr.salary.rule.category</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('code', 'like', '_PY')]</field>
            <field name="context">{'default_parent_id': False}</field>
        </record>

        <menuitem
            id="menu_hr_salary_rule_category_py"
            name="Categorías de Reglas"
            parent="menu_hr_payroll_py_config"
            action="action_hr_salary_rule_category_py"
            sequence="10"/>

        <!-- Paraguay Salary Rules -->
        <record id="action_hr_salary_rule_py" model="ir.actions.act_window">
            <field name="name">Reglas Salariales Paraguay</field>
            <field name="res_model">hr.salary.rule</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('code', 'like', '_PY')]</field>
        </record>

        <menuitem
            id="menu_hr_salary_rule_py"
            name="Reglas Salariales"
            parent="menu_hr_payroll_py_config"
            action="action_hr_salary_rule_py"
            sequence="20"/>

        <!-- Paraguay Payroll Structures -->
        <record id="action_hr_payroll_structure_py" model="ir.actions.act_window">
            <field name="name">Estructuras de Nómina Paraguay</field>
            <field name="res_model">hr.payroll.structure</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('country_id.code', '=', 'PY')]</field>
        </record>

        <menuitem
            id="menu_hr_payroll_structure_py"
            name="Estructuras de Nómina"
            parent="menu_hr_payroll_py_config"
            action="action_hr_payroll_structure_py"
            sequence="30"/>

        <!-- Paraguay Rule Parameters -->
        <record id="action_hr_rule_parameter_py" model="ir.actions.act_window">
            <field name="name">Parámetros Paraguay</field>
            <field name="res_model">hr.rule.parameter</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('country_id.code', '=', 'PY')]</field>
        </record>

        <menuitem
            id="menu_hr_rule_parameter_py"
            name="Parámetros de Reglas"
            parent="menu_hr_payroll_py_config"
            action="action_hr_rule_parameter_py"
            sequence="40"/>

        <!-- Paraguay Input Types -->
        <record id="action_hr_payslip_input_type_py" model="ir.actions.act_window">
            <field name="name">Tipos de Input Paraguay</field>
            <field name="res_model">hr.payslip.input.type</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('country_id.code', '=', 'PY')]</field>
        </record>

        <menuitem
            id="menu_hr_payslip_input_type_py"
            name="Tipos de Input"
            parent="menu_hr_payroll_py_config"
            action="action_hr_payslip_input_type_py"
            sequence="50"/>

    </data>
</odoo>