<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Paraguay Payslip Report Action -->
        <record id="action_report_payslip_py" model="ir.actions.report">
            <field name="name">Recibo de Salario Paraguay</field>
            <field name="model">hr.payslip</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">pisa_hr_payroll.report_payslip_py</field>
            <field name="report_file">pisa_hr_payroll.report_payslip_py</field>
            <field name="print_report_name">'Recibo_%s_%s' % (object.employee_id.name, object.date_to.strftime('%Y-%m'))</field>
            <field name="binding_model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>