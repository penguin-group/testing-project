<odoo>
    <data noupdate="1">
        <!-- Scheduled action -->
        <record id="ir_cron_check_consolidated_accounts" model="ir.cron">
            <field name="name">Check Consolidated Accounts</field>
            <field name="model_id" ref="model_consolidation_account"/>
            <field name="state">code</field>
            <field name="code">model.check_consolidated_accounts()</field>
            <field name="interval_type">days</field>
            <field name="interval_number">1</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>