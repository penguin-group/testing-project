<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- purchase.order inherit form view -->
        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase_order_form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="es_importacion" readonly="state != 'draft'"/>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button invisible="es_importacion == False" name="button_reporte_costeo" string="Costeo de importaciones" type="object"/>
                </xpath></field>
        </record>
    </data>
</odoo>
