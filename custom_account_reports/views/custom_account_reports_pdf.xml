<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="custom_account_report_pdf" inherit_id="account_reports.pdf_export_main">
        <xpath expr="//body/div/header" position="replace">

            <header>
                <div class="o_account_reports_header print_only">
                    <div class="row align-items-center justify-content-between">
                        <div class="col-8">
                            <div>
                                <h1>
                                    <strong>
                                        <t t-out="report_title"/>
                                    </strong>
                                </h1>
                            </div>
                            <t t-if="options.get('consolidation_journals', False)">
                                <h3>
                                    <t t-out="' - '.join([d['name'].replace('Consolidated Accounting', '') for d in options['consolidation_journals']])" />
                                </h3>
                            </t>
                            <div>
                                <!--Period-->
                                <t t-if="options.get('display_dates', False)">
                                    <div>
                                        <strong>Period: </strong> <t t-out="options['display_dates']"/>
                                    </div>
                                </t>
                                <!--Currency-->
                                <t t-if="options.get('currency', False)">
                                    <div>
                                        <strong>Currency: </strong> <t t-out="options['currency']"/>
                                    </div> <br/>
                                </t>

                            </div>
                        </div>
                        <div class="col-3" >
                            <img t-attf-src="/logo.png?company=1" style="float: right; max-height: 70px;"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="pisa-comp-info">
                            <t t-out="report_company_name" /><br/>
                            <!-- <address class="mb-0" t-field="env.company.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/> -->
                            <t t-if="env.company.vat">
                                RUC: <t t-out="env.company.vat"/>
                            </t>
                        </div>
                    </div>
                </div>
            </header>

        </xpath>
    </template>
</odoo>