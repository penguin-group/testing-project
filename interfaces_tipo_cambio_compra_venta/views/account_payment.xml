<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_payment_form_inherit" model="ir.ui.view">
            <field name="name">account_payment_form_inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount']/.." position="after">
                    <field force_save="True" name="currency_rate" readonly="freeze_currency_rate == False or state not in ['draft']" required="True"/>
                    <field readonly="state not in ['draft']" name="freeze_currency_rate"/>
                </xpath></field>
        </record>
    </data>
</odoo>
