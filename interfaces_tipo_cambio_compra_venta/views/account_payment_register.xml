<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_payment_register_form_inherit" model="ir.ui.view">
            <field name="name">account_payment_register_form_inherit</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group3']" position="after">
                    <group name="group_currency_rate" string="Tasa">
                        <field force_save="True" name="currency_rate" readonly="freeze_currency_rate == False" required="True"/>
                        <field name="freeze_currency_rate"/>
                    </group>
                    
                </xpath></field>
        </record>
    </data>
</odoo>
