<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_form_inherit" model="ir.ui.view">
            <field name="name">account_move_form_inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div/field[@name='journal_id']/.." position="after">
                    <field invisible="True" name="count_invoice_line_ids"/>
                    <field force_save="True" name="currency_rate" readonly="freeze_currency_rate == False or state in ['posted', 'cancel']" required="True"/>
                    <field invisible="state in ['posted', 'cancel']" name="freeze_currency_rate"/>
                </xpath>
                <xpath expr="//div[@name='journal_div']/field[@name='currency_id']" position="attributes">
                    <attribute name="readonly">count_invoice_line_ids > 0</attribute>
                    <attribute name="force_save">
                        True</attribute>
                </xpath></field>
        </record>
    </data>
</odoo>
