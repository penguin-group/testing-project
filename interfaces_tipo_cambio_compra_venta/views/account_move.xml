<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_form_inherit" model="ir.ui.view">
            <field name="name">account_move_form_inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div/field[@name='journal_id']/.." position="after">
                    <field name="count_invoice_line_ids" invisible="True"/>
                    <field name="currency_rate" attrs="{
                    'readonly':['|',('freeze_currency_rate','=',False),('state','in',['posted','cancel'])],
                    'required':True,
                    }" force_save="True"/>
                    <field name="freeze_currency_rate" attrs="{
                    'invisible':[('state','in',['posted','cancel']),],
                    }"/>
                </xpath>
                <xpath expr="//div[@name='journal_div']/field[@name='currency_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('count_invoice_line_ids','>',0)]}</attribute>
                    <attribute name="force_save">True</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>