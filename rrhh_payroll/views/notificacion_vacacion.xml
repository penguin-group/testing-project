<odoo>
    <data>
        <record model="ir.ui.view" id="notificacion_vacacion_tree">
            <field name="name">notificacion_vacacion_tree</field>
            <field name="model">notificacion.vacacion</field>
            <field name="arch" type="xml">
                <tree string="Notificaciones de Vacaciones" default_order="fecha_inicio_vacaciones asc, employee_id asc"
                      create="true" edit="true" decoration-success="state=='hold'">
                    <field name="state" invisible="True"/>
                    <field name="employee_id"/>
                    <field name="contract_date_start" optional="hide"/>
                    <field name="fecha_notificacion_vacaciones"/>
                    <field name="fecha_inicio_vacaciones"/>
                    <field name="dias_vacaciones"/>
                    <field name="currency_id" invisible="True"/>
                    <field name="payslip_net_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="company_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="notificacion_vacacion_form">
            <field name="name">notificacion_vacacion_form</field>
            <field name="model">notificacion.vacacion</field>
            <field name="arch" type="xml">
                <form string="Notificación de Vacacion" create="true">
                    <header>
                        <button name="generar_nominas" string="Crear nomina para vacaciones" type="object"
                                class="btn-primary"
                                attrs="{'invisible':[('state','!=','hold')]}"
                                help="Crear la nómina para las vacaciones"/>
                        <button name="cancelar_notificacion" string="Cancelar Notificación" type="object"
                                class="btn btn-default"
                                attrs="{'invisible':[('state','!=','done')]}"
                                help="Crear la notificación y elimina tanto la nómina como la ausencia"/>
                        <field name="state" widget="statusbar" attrs="{'readonly': True}"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="employee_id" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="contract_id"
                                   attrs="{'readonly':['|',('state','=','done'),('employee_id','=',False)]}"
                                   domain="[('employee_id','=',employee_id),('state','in',['open'])]"
                                   options="{'no_create': True, 'no_create_edit':True}"
                            />
                            <field name="company_id" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="fecha_notificacion_vacaciones"/>
                            <field name="fecha_pago_vacaciones"/>
                            <field name="dias_vacaciones" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="fecha_inicio_vacaciones" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="fecha_fin_vacaciones" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="fecha_reincorporacion_vacaciones"/>
                            <field name="payslip_id" attrs="{
                                'readonly':[('state','=','done')],
                                'invisible':[('state','!=','done')],
                            }"/>
                            <field name="leave_id" attrs="{
                                'readonly':[('state','=','done')],
                                'invisible':[('state','!=','done')],
                            }"/>
                            <field name="periodo_usufructuado" attrs="{'readonly':[('state','=','done')]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="notificacion_vacacion_search">
            <field name="name">notificacion_vacacion_search</field>
            <field name="model">notificacion.vacacion</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id" filter_domain="[('employee_id.name', 'ilike', self)]"/>
                    <filter name="group_by_fecha_inicio" string="Fecha de inicio"
                            context="{'group_by': 'fecha_inicio_vacaciones'}"/>
                    <filter name="group_by_state" string="Estado" context="{'group_by': 'state'}"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="notificacion_vacacion_action">
            <field name="name">Notificaciones de Vacaciones</field>
            <field name="res_model">notificacion.vacacion</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Las notificaciones de Vacaciones se crearán automáticamente</p>
            </field>
        </record>

        <menuitem id="notificacion_vacacion_menuitem" name="Notificaciones de Vacaciones"
                  parent="hr_payroll.menu_hr_payroll_payslips" sequence="16"
                  action="notificacion_vacacion_action"/>
    </data>
</odoo>