<odoo>
    <data>

        <template id="rrhh_payroll.notificacion_vacacion_full_template">
            <t t-foreach="docs" t-as="doc">
                <t t-call="rrhh_payroll.notificacion_vacacion_comunicacion_template">
                    <t t-set="docs" t-value="doc"/>
                </t>
                <t t-call="rrhh_payroll.notificacion_vacacion_usufructo_template">
                    <t t-set="docs" t-value="doc"/>
                </t>
                <t t-call="rrhh_payroll.notificacion_vacacion_recibo_template">
                    <t t-set="docs" t-value="doc"/>
                </t>
            </t>
        </template>

        <record model="ir.actions.report" id="rrhh_payroll.notificacion_vacacion_full_report">
            <field name="name">Comunicaci√≥n, Usufructo y Recibo de Vacaciones</field>
            <field name="model">notificacion.vacacion</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">rrhh_payroll.notificacion_vacacion_full_template</field>
            <field name="paperformat_id" ref="rrhh_payroll.papel_recibos"/>
            <field name="binding_model_id" ref="rrhh_payroll.model_notificacion_vacacion"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>