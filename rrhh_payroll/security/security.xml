<odoo>
    <data>

        <record id="notificacion_vacacion_company_rule" model="ir.rule">
            <field name="name">Notificacion de Vacación - Compañías</field>
            <field name="model_id" ref="model_notificacion_vacacion"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="groups" eval="[(4,ref('hr_payroll.group_hr_payroll_user'))]"/>
        </record>

    </data>
</odoo>
