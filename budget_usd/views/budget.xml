<?xml version='1.0' encoding='utf-8'?>
<odoo>
        <data>
            <!-- crossovered.budget inherit form view -->
            <record id="crossovered_budget_view_form" model="ir.ui.view">
                <field name="name">crossovered_budget_view_form</field>
                <field name="model">crossovered.budget</field>
                <field name="inherit_id" ref="account_budget.crossovered_budget_view_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//notebook/page/field[@name='crossovered_budget_line']/tree/field[@name='theoritical_amount']" position="after">
                        <field name="secondary_currency_id" invisible="True"/>
                        <field name="planned_amount_sec" optional="hide"/>
                        <field name="practical_amount_sec" optional="hide"/>
                        <field name="theoritical_amount_sec" optional="hide"/>
                        <field name="percentage_sec" optional="hide" widget="percentage"/>
                    </xpath>

                    <xpath expr="//notebook/page/field[@name='crossovered_budget_line']/tree/field[@name='planned_amount']" position="replace">
                        <field name="planned_amount" sum="Importe previsto" optional="show"/>                      
                    </xpath>
                    <xpath expr="//notebook/page/field[@name='crossovered_budget_line']/tree/field[@name='practical_amount']" position="replace">
                        <field name="practical_amount" sum="Importe real" optional="show"/>                      
                    </xpath>
                    <xpath expr="//notebook/page/field[@name='crossovered_budget_line']/tree/field[@name='theoritical_amount']" position="replace">
                        <field name="theoritical_amount" sum="Importe teÃ³rico" optional="show"/>                      
                    </xpath>
                    <xpath expr="//notebook/page/field[@name='crossovered_budget_line']/tree/field[@name='percentage']" position="replace">
                        <field name="percentage"  optional="show"/>                      
                    </xpath>
                    
                </field>
            </record>            
        </data>
</odoo>