<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <!-- Extension Data -->
    <t t-name="secondary_currency_reports.AccountReportFilterCurrencies">
        <Dropdown menuClass="'account_report_filter exchange_rate'">
            <button class="btn btn-secondary">
                <i class="fa fa-money me-1"/>Currency: <t t-esc="controller.options.currencies_selected_name"/>
            </button>

            <t t-set-slot="content">
                <t t-foreach="controller.options.currencies" t-as="currency" t-key="currency_index">
                    <DropdownItem
                            class="{ 'selected': currency.selected, 'ps-4': true }"
                            onSelected="() => this.filterCurrency(currency)"
                        >
                        <t t-esc="currency.name"/>
                    </DropdownItem> 
                </t>
            </t>
        </Dropdown>
    </t>
    <t t-name="secondary_currency_reports.AccountReportFilterRoundingUnitextend">
        <Dropdown menuClass="'account_report'">
            <button class="btn btn-secondary">
                <t t-out="roundingUnitName(this.controller.options['rounding_unit'])"/>
            </button>

            <t t-set-slot="content">
                <t t-foreach="controller.options.rounding_unit_names" t-as="roundingUnitValue" t-key="roundingUnitValue_index">
                    <DropdownItem
                        class="{ 'selected': (controller.options.rounding_unit == roundingUnitValue) }"
                        onSelected="() => this.filterRoundingUnit(roundingUnitValue)"
                    >
                        <t t-out="roundingUnitName(roundingUnitValue)"/>
                    </DropdownItem>
                </t>
            </t>
        </Dropdown>
    </t>
</templates>
