<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_expense_view_form_inherited" model="ir.ui.view">
        <field name="name">hr.expense.view.form.inherited</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form" />
        <field name="arch" type="xml">

            <!-- 
            The Vendor field must be consistently displayed and cannot be hidden
            no matter which payment mode is selected
            -->
            <xpath expr="//field[@name='vendor_id']" position="attributes">
                <attribute name="invisible">0</attribute>
                <attribute name="required">1</attribute>
            </xpath>

            <xpath expr="//field[@name='date']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>

            <xpath expr="//field[@name='vendor_id']" position="after">
                <field name="petty_cash_account_id" 
                    invisible="payment_mode != 'petty_cash'"
                    required="payment_mode == 'petty_cash'" 
                    domain="[('id', 'in', petty_cash_account_ids)]"
                    options="{'no_create': True, 'no_create_edit': True}" 
                />
                <field name="credit_card_account_id"
                    invisible="payment_mode != 'credit_card'"
                    required="payment_mode == 'credit_card'" 
                    options="{'no_create': True, 'no_create_edit': True}"
                />
            </xpath>

            <xpath expr="//field[@name='analytic_distribution']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>

        </field>
    </record>

    <record id="hr_expense_sheet_view_form_inherited" model="ir.ui.view">
        <field name="name">hr.expense.sheet.view.form.inherited</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form" />
        <field name="arch" type="xml">

            <!-- 
            We hide payment_method_line_id and employee_journal_id because we don't use them
            -->
            <xpath expr="//field[@name='payment_method_line_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='employee_journal_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- 
            Replace the total section with amounts in currency
            -->
            <xpath expr="//group[@name='expense_total']" position="replace">
                <group class="oe_subtotal_footer" colspan="2" name="expense_total">
                    <field name="untaxed_amount_currency"/>
                    <div class="oe_inline o_td_label">
                        <label for="total_tax_amount_currency"/>
                    </div>
                    <field name="total_tax_amount_currency" nolabel="1"/>
                    <div class="oe_inline o_td_label">
                        <label for="total_amount_currency"/>
                    </div>
                    <field name="total_amount_currency" nolabel="1" class="oe_subtotal_footer_separator"/>
                    <field name="amount_residual"
                        class="oe_subtotal_footer_separator"
                        invisible="state not in ('post', 'done')"/>
                </group>
            </xpath>

        </field>
    </record>

</odoo>