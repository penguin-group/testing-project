<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ir_module_module_form_view_inherit" model="ir.ui.view">
            <field name="name">ir_module_module_form_view_inherit</field>
            <field name="model">ir.module.module</field>
            <field name="inherit_id" ref="base.module_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='installed_version']" position="after">
                    <field name="module_real_installed_version_outdated" invisible="True"/>
                    <field name="real_installed_version" readonly="True" attrs="{'invisible':[('module_real_installed_version_outdated','=',False)]}"/>
                </xpath>

                <xpath expr="//sheet" position="inside">
                    <field name="module_real_installed_version_outdated" invisible="True"/>
                    <div class="alert alert-warning" role="alert" attrs="{'invisible': [('module_real_installed_version_outdated','=',False)]}">
                        <span>La última versión instalada no coincide con la versión disponible actualmente, debe de actualizar el módulo</span>
                    </div>
                </xpath>

            </field>
        </record>

        <record id="ir_module_module_tree_view_inherit" model="ir.ui.view">
            <field name="name">ir_module_module_tree_view_inherit</field>
            <field name="model">ir.module.module</field>
            <field name="inherit_id" ref="base.module_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='installed_version']" position="after">
                    <field name="module_real_installed_version_outdated" invisible="True"/>
                </xpath>

            </field>
        </record>

        <record id="ir_module_module_search_view_inherit" model="ir.ui.view">
            <field name="name">ir_module_module_search_view_inherit</field>
            <field name="model">ir.module.module</field>
            <field name="inherit_id" ref="base.view_module_filter"/>
            <field name="arch" type="xml">

                <xpath expr="//search" position="inside">
                    <filter name="module_real_installed_version_outdated" string="Módulos desactualizados"
                            domain="[('module_real_installed_version_outdated', '=', True)]"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>