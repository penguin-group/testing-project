<odoo>
    <data>

        <record id="view_account_move_form_inherited" model="ir.ui.view">
            <field name="name">view.account.move.form.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <div>
                        <button
                            string="Edit Primary Currency Rate"
                            name="edit_currency_rate"
                            type="object"
                            groups="account.group_account_manager,account.group_account_invoice"
                            invisible="move_type != 'in_invoice' or state != 'draft' or not partner_id"
                        />   
                    </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
