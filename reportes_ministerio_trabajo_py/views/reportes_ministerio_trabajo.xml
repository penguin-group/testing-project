<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <data>
        <record model="ir.ui.view" id="reportes_ministerio_trabajo_form">
            <field name="name">reportes_ministerio_trabajo_form</field>
            <field name="model">reportes_ministerio_trabajo</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="company_ids" widget="many2many_tags" options="{'no_quick_create':True, 'no_create_edit':True}"/>
                        <field name="year"/>
                    </group>
                    <footer>
                        <button string="Generar planillas PDF" class="oe_highlight" type="object" name="download_reports_pdf"/>
                        <button string="Generar planillas XLSX" class="oe_highlight" type="object" name="download_reports_xlsx"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="reportes_ministerio_trabajo_action">
            <field name="name">Generar Reportes para el Ministerio de Trabajo</field>
            <field name="res_model">reportes_ministerio_trabajo</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'form', 'view_id': ref('reportes_ministerio_trabajo_py.reportes_ministerio_trabajo_form')}),
            ]"/>
        </record>

        <menuitem name="Generar Reportes para el Ministerio de Trabajo"
                  id="reportes_ministerio_trabajo_menuitem" sequence="28"
                  parent="hr_payroll.menu_hr_payroll_report"
                  action="reportes_ministerio_trabajo_action"/>

    </data>

    <data>
        <record model="ir.ui.view" id="empleados_y_obreros_tree_view">
            <field name="name">empleados_y_obreros_tree_view</field>
            <field name="model">empleados_y_obreros_zip_model</field>
            <field name="arch" type="xml">
                <tree string="Empleados y Obreros" create="False">
                    <field name="year"/>
                    <field name="month"/>
                    <field name="company_id"/>
                    <field name="patronal_mtess_id" readonly="True"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="empleados_y_obreros_form_view">
            <field name="name">empleados_y_obreros_form_view</field>
            <field name="model">empleados_y_obreros_zip_model</field>
            <field name="arch" type="xml">
                <form string="Empleados y Obreros" create="False" edit="False">
                    <sheet>
                        <group>
                            <field name="year" readonly="True"/>
                            <field name="month" readonly="True"/>
                            <field name="company_id" readonly="True"/>
                            <field name="patronal_mtess_id" readonly="True"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="empleados_y_obreros_search_view">
            <field name="name">empleados_y_obreros_search_view</field>
            <field name="model">empleados_y_obreros_zip_model</field>
            <field name="arch" type="xml">
                <search>
                    <filter name="group_by_company_id" string="Companía" context="{'group_by': 'company_id'}"/>
                    <filter name="group_by_patronal_mtess_id" string="Patronal MTESS" context="{'group_by': 'patronal_mtess_id'}"/>
                </search>
            </field>
        </record>
    </data>

