<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="reportes_ministerio_trabajo_slow_mode_tree">
            <field name="name">reportes_ministerio_trabajo_slow_mode_tree</field>
            <field name="model">reportes_ministerio_trabajo</field>
            <field name="arch" type="xml">
                <tree string="Reportes para el Ministerio de Trabajo - PDF" create="False">
                    <field name="year"/>
                    <field name="company_ids"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="reportes_ministerio_trabajo_slow_mode_form">
            <field name="name">reportes_ministerio_trabajo_form</field>
            <field name="model">reportes_ministerio_trabajo</field>
            <field name="arch" type="xml">
                <form string="Reportes para el Ministerio de Trabajo - PDF" create="False" edit="False">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_open_empleados_y_obreros" class="oe_stat_button" icon="fa-book" type="object" help="Ver Empleados y Obreros"
                                    attrs="{'invisible': [('empleados_y_obreros_count', '=', 0)]}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="empleados_y_obreros_count"/>
                                    </span>
                                    <span class="o_stat_text">Empleados y Obreros</span>
                                </div>
                            </button>
                            <button name="action_open_sueldos_y_jornales" class="oe_stat_button" icon="fa-book" type="object" help="Ver Sueldos y Jornales"
                                    attrs="{'invisible': [('sueldos_y_jornales_count', '=', 0)]}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="sueldos_y_jornales_count"/>
                                    </span>
                                    <span class="o_stat_text">Sueldos y Jornales</span>
                                </div>
                            </button>
                            <button name="action_open_vacaciones" class="oe_stat_button" icon="fa-book" type="object" help="Ver Vacaciones"
                                    attrs="{'invisible': [('vacaciones_count', '=', 0)]}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="vacaciones_count"/>
                                    </span>
                                    <span class="o_stat_text">Vacaciones</span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <field name="company_ids" widget="many2many_tags" readonly="True"/>
                            <field name="year" readonly="True"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="reportes_ministerio_trabajo_slow_mode_action">
            <field name="name">Reportes para el Ministerio de Trabajo - PDF</field>
            <field name="res_model">reportes_ministerio_trabajo</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('reportes_ministerio_trabajo_py.reportes_ministerio_trabajo_slow_mode_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('reportes_ministerio_trabajo_py.reportes_ministerio_trabajo_slow_mode_form')}),
            ]"/>
            <field name="domain">[('wizard_report_type','=','pdf')]</field>
        </record>

        <menuitem name="Reportes para el Ministerio de Trabajo - PDF"
                  id="reportes_ministerio_trabajo_slow_mode_menuitem" sequence="50"
                  parent="hr_payroll.menu_hr_payroll_report"
                  action="reportes_ministerio_trabajo_slow_mode_action"/>

    </data>
    <data>

        <record model="ir.ui.view" id="empleados_y_obreros_slow_mode_tree_view">
            <field name="name">empleados_y_obreros_tree_view</field>
            <field name="model">empleados_y_obreros_zip_model</field>
            <field name="arch" type="xml">
                <tree string="Empleados y Obreros" create="False">
                    <field name="year"/>
                    <field name="company_id"/>
                    <field name="patronal_mtess_id"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="empleados_y_obreros_slow_mode_form_view">
            <field name="name">empleados_y_obreros_form_view</field>
            <field name="model">empleados_y_obreros_zip_model</field>
            <field name="arch" type="xml">
                <form string="Empleados y Obreros" create="False" edit="False">
                    <header>
                        <button string="Generar planilla - Empleados y Obreros" type="object" name="action_print_eyo_xlsx_slow_mode" class="oe_highlight"/>
                        <button string="Generar planilla - Sueldos y Jornales" type="object" name="action_print_syj_xlsx_slow_mode" class="oe_highlight"/>
                        <button string="Generar planilla - Resumen General" type="object" name="action_print_rg_xlsx_slow_mode" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="company_id" readonly="True"/>
                            <field name="year" readonly="True"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="empleados_y_obreros_slow_mode_action">
            <field name="name">Reportes para el Ministerio de Trabajo - XLSX</field>
            <field name="res_model">empleados_y_obreros_zip_model</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('reportes_ministerio_trabajo_py.empleados_y_obreros_slow_mode_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('reportes_ministerio_trabajo_py.empleados_y_obreros_slow_mode_form_view')}),
            ]"/>
            <field name="domain">[('is_report_for_xlsx','=',True)]</field>
        </record>

        <menuitem name="Reportes para el Ministerio de Trabajo - XLSX"
                  id="empleados_y_obreros_slow_mode_menuitem" sequence="55"
                  parent="hr_payroll.menu_hr_payroll_report"
                  action="empleados_y_obreros_slow_mode_action"/>

    </data>
</odoo>