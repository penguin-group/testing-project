<odoo>
    <data>
        <record id="hr_contract_form" model="ir.ui.view">
            <field name="name">hr_contract_form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='structure_type_id']" position="before">
                    <field name="patronal_mtess_id" domain="[('company_id','=',company_id),('patronal_tipo', '=', 'mtess')]" required="True"
                           options="{'no_create': True, 'no_create_edit':True}"/>
                    <field name="patronal_ips_id" domain="[('company_id','=',company_id),('patronal_tipo', '=', 'ips')]" required="True"
                           options="{'no_create': True, 'no_create_edit':True}"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="invisible" eval="False"/>
                </xpath>
                <xpath expr="//label[@for='wage']" position="before">
                    <field name="check_sueldo_minimo" attrs="{'invisible':[('wage_type','!=','monthly')]}"/>
                    <field name="check_jornal_minimo" attrs="{'invisible':[('wage_type','!=','daily')]}"/>
                    <label for="daily_wage" attrs="{'invisible': ['|',('wage_type', '!=', 'daily'), ('check_jornal_minimo', '=', True)]}"/>
                    <div class="o_row" name="daily_wage" attrs="{'invisible': ['|',('wage_type', '!=', 'daily'), ('check_jornal_minimo', '=', True)]}">
                        <field name="daily_wage" nolabel="1"/>
                        <span>/ día</span>
                    </div>
                    <label for="number_of_planned_work_days" attrs="{'invisible':[('wage_type','!=','daily')]}"/>
                    <div class="o_row" name="number_of_planned_work_days" attrs="{'invisible':[('wage_type','!=','daily')]}">
                        <field name="number_of_planned_work_days" nolabel="1"/>
                        <span>días al mes</span>
                    </div>
                </xpath>
                <xpath expr="//label[@for='wage']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|',('wage_type', 'in', ['hourly','daily']), ('check_sueldo_minimo', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//div[@name='wage']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|',('wage_type', 'in', ['hourly','daily']), ('check_sueldo_minimo', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//page[@name='information']/group/group/div/field[@name='wage']/.." position="after">
                    <field name="appears_in_mtess_reports"/>
                </xpath>

                <!--                <xpath expr="//label[@for='resource_calendar_id']" position="attributes">-->
                <!--                    <attribute name="invisible">True</attribute>-->
                <!--                </xpath>-->
                <!--                <xpath expr="//field[@name='resource_calendar_id']" position="attributes">-->
                <!--                    <attribute name="invisible">True</attribute>-->
                <!--                </xpath>-->
            </field>
        </record>

