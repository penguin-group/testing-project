<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_contract_form" model="ir.ui.view">
            <field name="name">hr_contract_form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='structure_type_id']" position="before">
                    <field domain="[('company_id','=',company_id),('patronal_tipo', '=', 'mtess')]" name="patronal_mtess_id" options="{'no_create': True, 'no_create_edit':True}" required="True"/>
                    <field domain="[('company_id','=',company_id),('patronal_tipo', '=', 'ips')]" name="patronal_ips_id" options="{'no_create': True, 'no_create_edit':True}" required="True"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute eval="False" name="invisible"/>
                </xpath>
                <xpath expr="//label[@for='wage']" position="before">
                    <field invisible="wage_type != 'monthly'" name="check_sueldo_minimo"/>
                    <field invisible="wage_type != 'daily'" name="check_jornal_minimo"/>
                    <label for="daily_wage" invisible="wage_type != 'daily' or check_jornal_minimo == True"/>
                    <div class="o_row" invisible="wage_type != 'daily' or check_jornal_minimo == True" name="daily_wage">
                        <field name="daily_wage" nolabel="1"/>
                        <span>
                            / día
                        </span>
                    </div>
                    <label for="number_of_planned_work_days" invisible="wage_type != 'daily'"/>
                    <div class="o_row" invisible="wage_type != 'daily'" name="number_of_planned_work_days">
                        <field name="number_of_planned_work_days" nolabel="1"/>
                        <span>
                            días al mes
                        </span>
                    </div>
                </xpath>
                <xpath expr="//label[@for='wage']" position="attributes">
                    <attribute name="invisible">wage_type in ['hourly', 'daily'] or check_sueldo_minimo == True</attribute>
                </xpath>
                <xpath expr="//div[@name='wage']" position="attributes">
                    <attribute name="invisible">wage_type in ['hourly', 'daily'] or check_sueldo_minimo == True</attribute>
                </xpath>
                <xpath expr="//page[@name='information']/group/group/div/field[@name='wage']/.." position="after">
                    <field name="appears_in_mtess_reports"/>
                </xpath>
                <!--                <xpath expr="//label[@for='resource_calendar_id']" position="attributes">-->
                <!--                    <attribute name="invisible">True</attribute>-->
                <!--                </xpath>-->
                <!--                <xpath expr="//field[@name='resource_calendar_id']" position="attributes">-->
                <!--                    <attribute name="invisible">True</attribute>-->
                <!--                </xpath>--></field>
        </record>
