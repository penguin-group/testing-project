<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="reporte_set_form">
            <field name="name">reporte_set_form</field>
            <field name="model">reporte_set</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="company_ids" widget="many2many_tags" options="{'no_quick_create':True, 'no_create_edit':True}"/>
                        <field name="year"/>
                    </group>
                    <footer>
                        <button string="Generar Planillas" class="oe_highlight" type="object" name="download_reports"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="reporte_set_action">
            <field name="name">Generar Reporte para la SET</field>
            <field name="res_model">reporte_set</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Generar Reporte para la SET"
                  id="reporte_set_menuitem" sequence="15"
                  parent="hr_payroll.menu_hr_payroll_report"
                  action="reporte_set_action"/>

    </data>
</odoo>