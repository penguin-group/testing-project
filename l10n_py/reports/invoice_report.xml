<odoo>
    <data>

        <template id="invoice_report_template">
            <t t-call="web.basic_layout">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-set="invoice_copy" t-value="'ORIGINAL'"/>
                        <t t-if="o.state=='cancel'">
                            <t t-set="watermark_message" t-value="'FACTURA ANULADA'"/>
                        </t>
                        <t t-elif="o.state=='draft'">
                            <t t-set="watermark_message" t-value="'BORRADOR - NO VÁLIDO PARA CRÉDITO FISCAL'"/>
                        </t>
                        <t t-else="">
                            <t t-set="watermark_message" t-value=""/>
                        </t>
                        <t t-call="l10n_py.invoice_document"/>
                    </t>
                </t>
            </t>
        </template>

        <template id="invoice_document">
            <link rel='stylesheet' href="/l10n_py/static/src/css/style.css"/>
            <div class="page">
                <div class="col-xs-6" style="margin-left:2mm;">
                    <table class="table">
                        <tr>
                            <td style="border-right: 1px solid black">
                                <table style="width:100%;border:0px" id="table_logo">
                                    <tr style="border: 0px !important" class="text-center">
                                        <td style="border: 0px" id="logo">
                                            <t t-if='o.company_id.logo'>
                                                <img t-att-src='image_data_uri(o.company_id.logo)'
                                                 style="width:80mm;height:20mm"/>
                                            </t>
                                        </td>
                                    </tr>
                                    <tr class="text-center" style="border:none !important">
                                        <td style="border:none !important">
                                            <strong>
                                                <t t-esc="o.company_id.name"/>
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr class="text-center" style="border:none !important">
                                        <td style="font-size:10px; border:none !important">
                                            <strong style="font-size:12px !important">
                                                <t t-esc="o.company_id.street"/>
                                            </strong>
                                            <br/>

                                            <strong style="font-size:12px !important">Tel:
                                                <t t-esc="o.company_id.phone"/>
                                            </strong>
                                            <br/>
                                            <strong style="font-size:12px !important">Email:
                                                <t t-esc="o.company_id.email"/>
                                            </strong>
                                            <br/>
                                            <strong style="font-size:12px !important">Web:
                                                <t t-esc="o.company_id.website"/>
                                            </strong>
                                            <br/>

                                            <strong style="font-size:12px !important">
                                                <t t-esc="o.company_id.city"/>
                                                -
                                                <t t-esc="o.company_id.country_id.name"/>
                                            </strong>
                                            <br/>
                                        </td>
                                    </tr>
                                </table>

                            </td>
                            <td width="30%" class="text-center" style="font-size:12px;vertical-align:middle">
                                <strong class="fields">TIMBRADO N°
                                    <t t-if="o.journal_id.invoice_authorization_id.document_type == o.move_type">
                                        <span t-field="o.journal_id.invoice_authorization_id.name"/>
                                        <br/>
                                        <span class="fields">Inicio de vigencia: <span t-esc="o.journal_id.invoice_authorization_id.start_date.strftime('%d/%m/%Y')"/></span>
                                        <span class="fields">Fin de vigencia: <span t-esc="o.journal_id.invoice_authorization_id.end_date.strftime('%d/%m/%Y')"/></span>
                                    </t>
                                </strong>
                                <br/>
                                <p class="fields">RUC:
                                    <t t-esc="o.company_id.vat"/>
                                </p>
                                <br></br>
                                <t t-if="o.move_type=='out_invoice'">
                                    <p class="fields">FACTURA N°</p>
                                </t>
                                <t t-elif="o.move_type=='out_refund'">
                                    <p class="fields">NOTA DE CREDITO N°</p>
                                </t>
                                <p class="fields">
                                    <span class="invoice-number text-center" style="font-size:20px !important" t-field="o.name"/>
                                </p>
                                <p class="fields">
                                    <span id="invoice_copy" class="text-center">
                                        <t t-esc="invoice_copy"/>
                                    </span>
                                </p>
                            </td>
                        </tr>
                    </table>

                    <div style="position:absolute;opacity:0.20;z-index:1000;transform:rotate(310deg);-webkit-transform:rotate(310deg);width:50%;margin-left:150px;margin-top:300px">
                        <p id="watermark" style="font-size:40px">
                            <t t-esc="watermark_message"/>
                        </p>
                    </div>

                    <t t-if="o.move_type=='out_invoice'">
                        <table class="table">
                            <tr>
                                <td class="fields text-right">
                                    CONDICIÓN DE VENTA:
                                </td>
                                <t t-if="o.invoice_date==o.invoice_date_due">
                                    <td class="w-30 fs-16 ">Contado (X)</td>
                                    <td class="w-30 fs-16 ">Crédito ( )</td>
                                </t>
                                <t t-if="o.invoice_date!=o.invoice_date_due">
                                    <td class="w-30 fs-16 ">Contado ( )</td>
                                    <td class="w-30 fs-16 ">Crédito (X)</td>
                                </t>
                            </tr>
                        </table>
                    </t>
                    <table class="table" id="header">
                        <col style="width:72%;"/>
                        <col style="width:14%;"/>
                        <col style="width:14%;"/>
                        <tr>
                            <td class="fs-16 text-left" style="padding-left:5px;">
                                <t t-if="o.invoice_date">
                                    <t t-set="invoice_date" t-value="o.invoice_date.strftime('%d/%m/%Y')"/>
                                </t>
                                <t t-else="">
                                    <t t-set="invoice_date" t-value="'&#160;'"/>
                                </t>
                                <span>
                                    <strong>FECHA DE EMISION:</strong>
                                    <t t-esc="'&#160;' + invoice_date"/>
                                </span>
                            </td>
                            <td colspan="2" class="fs-16 text-left" style="border-right:1px solid black;">
                                <t t-if="o.invoice_date_due and o.invoice_date_due>o.invoice_date and o.move_type=='out_invoice'">
                                    <t t-if="o.invoice_date_due">
                                        <t t-set="invoice_due_date" t-value="o.invoice_date_due.strftime('%d/%m/%Y')"/>
                                    </t>
                                    <t t-else="">
                                        <t t-set="invoice_due_date" t-value="'&#160;'"/>
                                    </t>
                                    <span>
                                        <strong>VENCIMIENTO:</strong>
                                        <t t-esc="'&#160;' + invoice_due_date"/>
                                    </span>
                                </t>
                                <t t-else="">
                                    <span/>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td class="fs-16 text-left" style="padding-left:5px;">
                                <t t-if="o.partner_id.parent_id">
                                    <t t-set="customer_name" t-value="o.partner_id.parent_id.name"/>
                                </t>
                                <t t-if="not o.partner_id.parent_id">
                                    <t t-set="customer_name" t-value="o.partner_id.name"/>
                                </t>
                                <span>
                                    <strong>NOMBRE:</strong>
                                    <t t-esc="'&#160;' + customer_name"/>
                                </span>
                            </td>
                            <td colspan="2" class="fs-16 text-left" style="border-right:1px solid black;">
                                <t t-if="o.partner_id.parent_id">
                                    <t t-set="customer_vat" t-value="o.partner_id.parent_id.vat"/>
                                </t>
                                <t t-if="not o.partner_id.parent_id">
                                    <t t-set="customer_vat" t-value="o.partner_id.vat"/>
                                </t>
                                <span>
                                    <strong>RUC:</strong>
                                    <t t-esc="'&#160;' + customer_vat"/>
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <t t-if="o.move_type == 'out_refund'">
                                <td class="fs-16 text-left" style="padding-left:5px;">
                                    <t t-if="o.partner_id.street">
                                        <t t-set="street" t-value="o.partner_id.street"/>
                                    </t>
                                    <t t-else="">
                                        <t t-set="street" t-value="'&#160;'"/>
                                    </t>
                                    <t t-if="o.partner_id.city">
                                        <t t-set="city" t-value="' - ' + o.partner_id.city"/>
                                    </t>
                                    <t t-else="">
                                        <t t-set="city" t-value="'&#160;'"/>
                                    </t>
                                    <t t-if="o.partner_id.country_id.name">
                                        <t t-set="country" t-value="' - ' + o.partner_id.country_id.name"/>
                                    </t>
                                    <t t-else="">
                                        <t t-set="country" t-value="'&#160;'"/>
                                    </t>
                                    <span>
                                        <strong>DIRECCIÓN:</strong>
                                        <t t-esc="'&#160;' + street + city + country"/>
                                    </span>
                                </td>
                                <td colspan="2" class="fs-16 text-left" style="border-right:1px solid black;">
                                    <t t-if="o.reversed_entry_id">
                                        <t t-set="reversed_entry" t-value="o.reversed_entry_id.name"/>
                                    </t>
                                    <t t-if="o.related_invoice_number">
                                        <t t-set="reversed_entry" t-value="o.related_invoice_number"/>
                                    </t>
                                    <t t-else="">
                                        <t t-set="reversed_entry" t-value="'&#160;'"/>
                                    </t>
                                    <span>
                                        <strong>FACTURA:</strong>
                                        <t t-esc="'&#160;' + reversed_entry"/>
                                    </span>
                                </td>
                            </t>
                            <t t-else="">
                                <td colspan="3" class="fs-16 text-left" style="padding-left:5px;border-right:1px solid black;">
                                    <t t-if="o.partner_id.street">
                                        <t t-set="street" t-value="o.partner_id.street"/>
                                    </t>
                                    <t t-else="">
                                        <t t-set="street" t-value="'&#160;'"/>
                                    </t>
                                    <t t-if="o.partner_id.city">
                                        <t t-set="city" t-value="' - ' + o.partner_id.city"/>
                                    </t>
                                    <t t-else="">
                                        <t t-set="city" t-value="'&#160;'"/>
                                    </t>
                                    <t t-if="o.partner_id.country_id.name">
                                        <t t-set="country" t-value="' - ' + o.partner_id.country_id.name"/>
                                    </t>
                                    <t t-else="">
                                        <t t-set="country" t-value="'&#160;'"/>
                                    </t>
                                    <span>
                                        <strong>DIRECCIÓN:</strong>
                                        <t t-esc="'&#160;' + street + city + country"/>
                                    </span>
                                </td>
                            </t>
                        </tr>
                        <tr>
                            <td class="fs-16 text-left" style="padding-left:5px;">
                                <t t-if="o.partner_id.email">
                                    <t t-set="email" t-value="o.partner_id.email"/>
                                </t>
                                <t t-else="">
                                    <t t-set="email" t-value="'&#160;'"/>
                                </t>
                                <span>
                                    <strong>EMAIL:</strong>
                                    <t t-esc="'&#160;' + email"/>
                                </span>
                            </td>
                            <td colspan="2" class="fs-16 text-left" style="border-right:1px solid black;">
                                <t t-if="o.partner_id.phone">
                                    <t t-set="phone" t-value="o.partner_id.phone"/>
                                </t>
                                <t t-else="">
                                    <t t-set="phone" t-value="'&#160;'"/>
                                </t>
                                <span>
                                    <strong>TEL:</strong>
                                    <t t-esc="'&#160;' + phone"/>
                                </span>
                            </td>
                        </tr>
                    </table>

                    <table class="table" id="items_header">
                        <tr class="text-center">
                            <th rowspan="2" class="w-10p mt-5">
                                <p class="fields">COD.</p>
                            </th>
                            <th rowspan="2" class="w-10p mt-5">
                                <p class="fields">CANT.</p>
                            </th>
                            <th rowspan="2" class="w-40p mt-5">
                                <p class="fields">DESCRIPCION</p>
                            </th>
                            <th rowspan="2" class="w-10p">
                                <p class="fields">PRECIO UNITARIO</p>
                            </th>
                            <th rowspan="1" class="w-30p" colspan="3">
                                <p class="fields ">VALOR DE VENTA</p>
                            </th>
                        </tr>
                        <tr class="text-center">
                            <th class="w-10p">
                                <p class="fields">EXENTA</p>
                            </th>
                            <th class="w-10p">
                                <p class="fields">IVA 5%</p>
                            </th>
                            <th class="w-10p">
                                <p class="fields">IVA 10%</p>
                            </th>
                        </tr>
                    </table>

                    <t t-if="o.journal_id.show_qr">
                        <t t-set="table_style" t-value="'detail-table-qr'"/>
                    </t>
                    <t t-else="">
                        <t t-set="table_style" t-value="'detail-table'"/>
                    </t>

                    <table t-att-class="table_style" id="table_detail">
                        <t t-set="max_line" t-value="0"/>
                        <t t-set="subtotal_exempt" t-value="0"/>
                        <t t-set="subtotal_5" t-value="0"/>
                        <t t-set="subtotal_10" t-value="0"/>
                        <t t-foreach="o.invoice_line_ids" t-as="l">
                            <t t-if="l.display_type == 'line_note' or l.display_type == 'line_section'"> <!-- Section or Notes Line -->
                                <tr class="fs-14" style="height:14px;line:height:14px;font-style:italic;">
                                    <td class="w-10p no-border detail-line text-center" style="word-break:break-all;">
                                        <span></span>
                                    </td>
                                    <td class="w-10p no-border detail-line text-center">
                                        <span></span>
                                    </td>
                                    <td class="w-40p no-border detail-line" style="text-align:left; !important">
                                        <p>
                                            <span t-esc="l.name"/>
                                        </p>
                                    </td>
                                    <td class="w-10p no-border detail-line">
                                        <span></span>
                                    </td>
                                    <td class="w-10p detail-line">
                                        <span></span>
                                    </td>
                                    <td class="w-10p detail-line">
                                        <span></span>
                                    </td>
                                    <td class="w-10p detail-line">
                                        <span></span>
                                    </td>
                                </tr>
                            </t>
                            <t t-else="">  <!-- Item Line -->
                                <tr class="fs-14" style="height:14px;line:height:14px">
                                    <td class="w-10p fs-11 no-border detail-line text-center"
                                        style="word-break: break-all;">
                                        <t t-if="l.product_id and l.product_id.default_code">
                                            <span t-field="l.product_id.default_code"/>
                                        </t>
                                        <t t-else="">
                                            <span></span>
                                        </t>
                                    </td>
                                    <td class="w-10p no-border detail-line text-center">
                                        <span t-esc="l.quantity"/>
                                    </td>
                                    <td class="w-40p no-border detail-line"
                                        style="text-align:left !important">
                                        <t t-esc="l.name"/>
                                    </td>
                                    <td class="w-10p no-border detail-line text-center">
                                        <span t-esc="o.format_amount(l.price_unit - (l.price_unit*l.discount/100))"/>
                                    </td>
                                    <t t-if="l.tax_ids.amount==0.0000">
                                        <td class="w-10p detail-line text-center" id="tax_exempt_field">
                                            <t t-set="subtotal1"
                                               t-value="(l.price_unit - (l.price_unit*l.discount/100)) * l.quantity"/>
                                            <span t-esc="o.format_amount(subtotal1)"/>
                                            <t t-set="subtotal_exempt"
                                               t-value="subtotal_exempt+subtotal1"/>
                                        </td>
                                        <td class="w-10p detail-line" id="tax_5_field">
                                            <span></span>
                                        </td>
                                        <td class="w-10p detail-line" id="tax_10_field">
                                            <span></span>
                                        </td>
                                    </t>
                                    <t t-if="l.tax_ids.amount==5.0000">
                                        <td class="w-10p detail-line" id="tax_exempt_field">
                                            <span></span>
                                        </td>
                                        <td class="w-10p detail-line text-center" id="tax_5_field">
                                            <t t-set="subtotal1"
                                               t-value="(l.price_unit - (l.price_unit*l.discount/100)) * l.quantity"/>
                                            <span t-esc="o.format_amount(subtotal1)"/>
                                            <t t-set="subtotal_5" t-value="subtotal_5+subtotal1"/>
                                        </td>
                                        <td class="w-10p detail-line" id="tax_10_field">
                                            <span></span>
                                        </td>
                                    </t>
                                    <t t-if="l.tax_ids.amount==10.0000">
                                        <td class="w-10p detail-line" id="tax_exempt_field">
                                            <span></span>
                                        </td>
                                        <td class="w-10p detail-line" id="tax_5_field">
                                            <span></span>
                                        </td>
                                        <td class="w-10p detail-line text-center" id="tax_10_field">
                                            <t t-set="subtotal1"
                                               t-value="(l.price_unit - (l.price_unit*l.discount/100)) * l.quantity"/>
                                            <span t-esc="o.format_amount(subtotal1)"/>
                                            <t t-set="subtotal_10" t-value="subtotal_10+subtotal1"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </t>
                        <t t-if="o.journal_id.max_lines > 0">
                            <t t-foreach="o.journal_id.max_lines-len(o.invoice_line_ids)"
                               t-as="remaining">
                                <tr>
                                    <td class="detail-line"></td>
                                    <td class="detail-line"></td>
                                    <td class="detail-line"></td>
                                    <td class="detail-line"></td>
                                    <td class="detail-line"></td>
                                    <td class="detail-line"></td>
                                    <td class="detail-line"></td>
                                </tr>
                            </t>
                        </t>
                        <t t-else="">
                            <t t-foreach="20-len(o.invoice_line_ids)"
                               t-as="remaining">
                                <tr>
                                    <td class="detail-line"></td>
                                    <td class="detail-line"></td>
                                    <td class="detail-line"></td>
                                    <td class="detail-line"></td>
                                    <td class="detail-line"></td>
                                    <td class="detail-line"></td>
                                    <td class="detail-line"></td>
                                </tr>
                            </t>
                        </t>
                    </table>

                    <table class="table" id="table_tax">
                        <tr class="fs-14">
                            <t t-set="subtotal_exempt" t-value="0"/>
                            <t t-set="subtotal_5" t-value="0"/>
                            <t t-set="subtotal_10" t-value="0"/>
                            <t t-set="tax_5" t-value="0"/>
                            <t t-set="tax_10" t-value="0"/>
                            <t t-foreach="o.invoice_line_ids" t-as="l">
                                <t t-if="l.tax_ids.amount==0.0000">
                                    <t t-set="subtotalEx" t-value="(l.price_unit - (l.price_unit*l.discount/100)) * l.quantity"/>
                                    <t t-set="subtotal_exempt" t-value="subtotal_exempt+subtotalEx"/>
                                </t>
                                <t t-if="l.tax_ids.amount==5.0000">
                                    <t t-set="subtotal5" t-value="(l.price_unit - (l.price_unit*l.discount/100)) * l.quantity"/>
                                    <t t-set="tax_5" t-value="tax_5 + ((l.price_unit - (l.price_unit*l.discount/100)) * l.quantity  / 21)"/>
                                    <t t-set="subtotal_5" t-value="subtotal_5+subtotal5"/>
                                </t>
                                <t t-if="l.tax_ids.amount==10.0000">
                                    <t t-set="subtotal10" t-value="(l.price_unit - (l.price_unit*l.discount/100)) * l.quantity"/>
                                    <t t-set="tax_10" t-value="tax_10 + ((l.price_unit - (l.price_unit*l.discount/100)) * l.quantity / 11)"/>
                                    <t t-set="subtotal_10" t-value="subtotal_10+subtotal10"/>
                                </t>
                            </t>
                            <td class="fields w-60p" colspan="4" style="border:1px solid black">
                                <span class="fields" style="padding-top:10px;padding-bottom:10px;">SUB
                                    TOTALES:
                                </span>
                            </td>
                            <td class="w-10p detail-line" style="border:none !important">
                            </td>
                            <td class="w-10p detail-line text-center" id="tax_exempt_field" style="border:1px solid black">
                                <span t-esc="o.format_amount(subtotal_exempt)"/>
                            </td>
                            <td class="w-10p detail-line text-center" id="tax_5_field" style="border:1px solid black">
                                <span t-esc="o.format_amount(subtotal_5)"/>
                            </td>
                            <td class="w-10p detail-line text-center" id="tax_10_field" style="border:1px solid black">
                                <span t-esc="o.format_amount(subtotal_10)"/>
                            </td>
                        </tr>
                    </table>

                    <table class="table">
                        <tr class="fs-14">
                            <td class="fields w-20p">
                                <span class="fields" style="padding-top:10px;padding-bottom:10px;">TOTAL A PAGAR: </span>
                            </td>
                            <td class="w-60p">
                                <span>
                                    <t t-esc="o.currency_id.currency_unit_label"/>
                                </span>
                                <span></span>
                                <span t-esc="o.amount_to_text(o.amount_total, o.currency_id)"/>
                            </td>
                            <td class="w-20p text-right totalPagar">
                                <t t-set="amount_total" t-value="o.amount_total"/>
                                <span class="text-right" t-esc="o.format_amount(amount_total)"/>
                            </td>
                        </tr>
                    </table>

                    <table class="table" id="IVA">
                        <tr class="fs-14">
                            <t t-set="amount_vat" t-value="0"/>
                            <td class="text-left w-30p">
                                <p class="fields">LIQUIDACIÓN DEL IVA:</p>
                            </td>
                            <td class="fields w-5p">
                                5%:
                            </td>
                            <td id="tax_5_field" class="w-10p">
                                <span t-esc="o.format_amount(tax_5)"/>
                                <t t-set="amount_vat" t-value="amount_vat+tax_5"/>
                            </td>
                            <td class="fields w-5p">
                                10%:
                            </td>
                            <td id="tax_10_field" class="w-10p">
                                <span t-esc="o.format_amount(tax_10)"/>
                                <t t-set="amount_vat" t-value="amount_vat+tax_10"/>
                            </td>
                            <td>
                                <td class="fields w-20p;text-right">
                                    TOTAL IVA:
                                </td>
                                <td class="w-25p text-right totalPagar">
                                    <span t-esc="o.format_amount(amount_vat)"/>
                                </td>
                            </td>
                        </tr>
                    </table>

                    <t t-if="o.journal_id.show_qr">
                        <table class="table">
                            <tr>
                                <td style="width:20%">
                                    <div style="display:table-cell;vertical-align:top;">

                                        <img t-att-src="image_data_uri(o.qr_code)"
                                             style="max-width:150px;max-height:150px;margin-left:15px"
                                        />
                                    </div>
                                </td>
                                <td style="font-size:10px;width:80%;padding:2px;color:black">
                                    <div style="display:table-cell;vertical-align:top">
                                        <t t-if="o.journal_id.invoice_footer">
                                            <t t-raw="o.journal_id.invoice_footer"/>
                                        </t>
                                        <t t-else="">
                                            <span></span>
                                        </t>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </t>

                    <table style="width:100%;border:1px solid black">
                        <tr>
                            <td style="heigth:30px">
                                <strong style="visibility:hidden">AA</strong>
                            </td>
                        </tr>
                        <tr style="border:1px solid black">

                            <td style="text-align:center;font-size:12px;width:25%;overflow: hidden;display: inline-block;white-space: nowrap;">
                                <strong>
                                    Firma y sello del Cliente
                                </strong>
                            </td>
                            <td style="text-align:center;font-size:12px;width:25%;overflow: hidden;display: inline-block;white-space: nowrap;">
                                <strong>
                                    Aclaración de firma
                                </strong>
                            </td>
                            <td style="text-align:center;font-size:12px;width:25%;overflow: hidden;display: inline-block;white-space: nowrap;">
                                <strong>
                                    C.I. Nro. / RUC
                                </strong>
                            </td>
                            <td style="text-align:center;font-size:12px;width:25%;overflow: hidden;display: inline-block;white-space: nowrap;">
                                <strong>
                                    Fecha
                                </strong>
                            </td>
                        </tr>
                    </table>
                    <table style="width:100%;border:1px solid black">
                        <tr style="border:1px solid black">
                            <td style="border:1px solid black;width:70%; font-size:12px;vertical-align:middle">
                                <span>AUTORIZADO COMO AUTOIMPRESOR Y TIMBRADO DE DOCUMENTOS NRO:</span>
                                <t t-if="o.journal_id.invoice_authorization_id.self_printer_authorization">
                                    <span t-field="o.journal_id.invoice_authorization_id.self_printer_authorization"/>
                                </t>
