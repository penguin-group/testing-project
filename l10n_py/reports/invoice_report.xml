                    </table>
                </div>
            </div>
        </template>

        <template id="invoice_report_template_duplicate">
            <t t-call="web.basic_layout">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-set="invoice_copy" t-value="'DUPLICADO'"/>
                        <t t-if="o.state=='cancel'">
                            <t t-set="watermark_message" t-value="'FACTURA ANULADA'"/>
                        </t>
                        <t t-else="">
                            <t t-set="watermark_message" t-value="'DUPLICADO'"/>
                        </t>
                        <t t-call="l10n_py.invoice_document"/>
                    </t>
                </t>
            </t>
        </template>

        <record id="paperformat_invoice" model="report.paperformat">
            <field name="name">Facturas</field>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">1</field>
            <field name="dpi">90</field>
        </record>

        <record id="invoice_report_action" model="ir.actions.report">
            <field name="name">Self-printed Invoice (Original)</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">l10n_py.invoice_report_template</field>
            <field name="report_file">l10n_py.invoice_report_template</field>
            <field name="print_report_name">(object.name)</field>
            <field name="paperformat_id" ref="l10n_py.paperformat_invoice"/>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
        </record>

        <record id="invoice_duplicate_report_action" model="ir.actions.report">
            <field name="name">Self-printed Invoice (Duplicate)</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">l10n_py.invoice_report_template_duplicate</field>
            <field name="report_file">l10n_py.invoice_report_template_duplicate</field>
            <field name="print_report_name">(object.name)</field>
            <field name="paperformat_id" ref="l10n_py.paperformat_invoice"/>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
        </record>

    </data>
