<odoo>
    <data>

        <record id="view_move_form_inherited" model="ir.ui.view">
            <field name="name">view.move.form.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                        <page name="page_paraguay" string="Paraguayan Legal Compliance" invisible="not context.get('in_paraguay')">
                            <group>
                                <group name="rg90_group" string="General Resolution 90">
                                    <field name="res90_identification_type" readonly="state not in ['draft']"/>
                                    <field name="res90_type_receipt" readonly="state not in ['draft']"/>
                                    <field name="res90_number_invoice_authorization" readonly="state not in ['draft']"/>
                                    <field name="res90_imputes_vat" readonly="state not in ['draft']"/>
                                    <field name="res90_imputes_ire" readonly="state not in ['draft']"/>
                                    <field name="res90_imputes_irp_rsp" readonly="state not in ['draft']"/>
                                    <field name="res90_not_imputes" readonly="state not in ['draft']"/>
                                    <field name="exclude_res90" readonly="state not in ['draft']"/>
                                    <field name="res90_associated_voucher_number" readonly="state not in ['draft']"/>
                                    <field name="res90_associated_receipt_stamping" readonly="state not in ['draft']"/>
                                </group>
                                <group name="invoice_authorization_group" string="Invoice Authorization">
                                    <field name="is_local_supplier" invisible="True" />
                                    <field name="supplier_invoice_authorization_id" 
                                        invisible="move_type not in ['in_invoice', 'in_refund']"
                                        required="move_type in ['in_invoice', 'in_refund'] and is_local_supplier"
                                        domain="[('partner_id', '=', partner_id), ('end_date', '>=', invoice_date)]"
                                    />
                                    <field name="supplier_invoice_authorization_start_date" readonly="1"/>
                                    <field name="supplier_invoice_authorization_end_date" readonly="1"/>
                                    <label for="delivery_note_number"/>
                                    <div>
                                        <field name="delivery_note_number"/>
                                    </div>
                                    <label for="related_invoice_number" invisible="move_type not in ['out_refund', 'in_refund']"/>
                                    <div>
                                        <field name="related_invoice_number" invisible="move_type not in ['out_refund', 'in_refund']"/>
                                    </div>
                                </group>
                                <group name="import_invoices_group" string="Import Invoices" invisible="move_type not in ['in_invoice']" >
                                    <field invisible="import_clearance == True" name="foreign_invoice" readonly="state != 'draft'"/>
                                    <field invisible="foreign_invoice == True" name="import_clearance" readonly="state != 'draft'"/>
                                    <field invisible="import_clearance == False" name="import_invoice_ids" readonly="state != 'draft'" required="import_clearance == True" widget="many2many_tags"/>
                                </group>
                            </group>
                        </page>                    
                </xpath>

                <xpath expr="//label[@for='ref']" position="attributes">
                    <div invisible="not context.get('in_paraguay')">
                        <attribute name="string">Invoice Number</attribute>
                    </div>
                </xpath>

                <xpath expr="//field[@name='ref']" position="attributes">
                    <div invisible="not context.get('in_paraguay')">
                        <attribute name="string">Invoice Number</attribute>
                        <attribute name="placeholder">e.g.: 001-001-0000001</attribute>
                    </div>
                </xpath>

                <xpath expr="//button[@name='button_cancel'][2]" position="attributes">
                    <div invisible="not context.get('in_paraguay')">
                        <attribute name="invisible">not id or state != 'draft' or move_type in ['out_invoice', 'out_refund', 'entry']</attribute>
                    </div>
                </xpath>

                <xpath expr="//header" position="inside">
                    <div invisible="not context.get('in_paraguay')">
                        <button name="button_cancel_invoice" 
                            string="Cancel Invoice" type="object" 
                            groups="account.group_account_invoice" 
                            invisible="not id or state == 'cancel' or move_type not in ['out_invoice', 'out_refund']" 
                        />
                        <button string="Edit Currency Rate" 
                            name="edit_currency_rate" 
                            type="object" 
                            groups="account.group_account_manager" 
                            invisible="move_type != 'in_invoice' or currency_id == company_currency_id or state != 'draft'"
                        />
                    </div>
                </xpath>

            </field>
        </record>
    
        <record id="view_move_form_currency_rate" model="ir.ui.view">
            <field name="name">view.move.form.currency.rate</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='journal_div']" position="replace">
                    <div name="journal_div"
                            class="d-flex"
                            groups="account.group_account_readonly,base.group_multi_currency">
                        <field name="journal_id"
                                groups="account.group_account_readonly"
                                options="{'no_create': True, 'no_open': True}"
                                readonly="posted_before and name not in (False, '', '/')"/>

                        <span class="o_form_label mx-3 oe_edit_only"
                                groups="account.group_account_readonly"
                                invisible="move_type == 'entry'">
                            <span groups="base.group_multi_currency">in </span>
                        </span>
                        <div name="currency_div"
                                groups="base.group_multi_currency"
                                class="w-100"
                                style="white-space: pre;"
                                invisible="move_type == 'entry'">
                            <field name="currency_id"
                                    readonly="state != 'draft'"
                                    class="oe_inline"
                                    options="{'no_create': True}"
                                    context="{'search_default_active': 1, 'search_default_inactive': 1}"/>
                            <div class="break"/>
                            <div name="currency_conversion_div"
                                    class="d-flex text-muted float-start"
                                    invisible="currency_id == company_currency_id">
                                <span>1 </span>
                                <field name="company_currency_id" readonly="True" options="{'no_open': True}"/>
                                <span> = </span>
                                <field name="invoice_currency_rate" digits="[12,6]" readonly="True"/>
                                <span> </span>
                                <field name="currency_id" readonly="True" options="{'no_open': True}"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>