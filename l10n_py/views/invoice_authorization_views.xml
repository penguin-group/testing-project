<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="invoice_authorization_view_form" model="ir.ui.view">
            <field name="name">invoice.authorization.view.form</field>
            <field name="model">invoice.authorization</field>
            <field name="arch" type="xml">
                <form string="Invoice Authorization">
                    <sheet>
                        <h2 class="oe_title">
                            <field name="name"/>
                        </h2>
                        <group>
                            <group>
                                <field name="document_type"/>
                                <field name="partner_id" invisible="document_type not in ['in_invoice', 'in_refund']"
                                    required="document_type in ['in_invoice', 'in_refund']"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="active" widget="boolean_button"/>
                            </group>
                            <group>
                                <field name="establishment_number"/>
                                <field name="expedition_point_number"/>
                                <field name="initial_invoice_number"/>
                                <field name="final_invoice_number"/>
                                <field name="self_printer_authorization" invisible="document_type not in ['out_invoice', 'out_refund']"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="invoice_authorization_view_tree" model="ir.ui.view">
            <field name="name">invoice.authorization.view.tree</field>
            <field name="model">invoice.authorization</field>
            <field name="arch" type="xml">
                <tree string="Invoice Authorization">
                    <field name="document_type"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="establishment_number"/>
                    <field name="expedition_point_number"/>
                    <field name="initial_invoice_number" optional="hide"/>
                    <field name="final_invoice_number" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="invoice_authorization_action" model="ir.actions.act_window">
            <field name="name">Invoice Authorization</field>
            <field name="res_model">invoice.authorization</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="invoice_authorization_menu"
            name="Invoice Authorizations"
            action="invoice_authorization_action"
            parent="account.account_account_menu"
            sequence="4"/>
    
    </data>
    

</odoo>
