<odoo>
    <data>
        <record id="view_account_form_inherit" model="ir.ui.view">
            <field name="name">view.account.form.inherit</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page name="l10n_py_page" string="Paraguay" groups="l10n_py.l10n_py_security_group" 
                        invisible="not context.get('in_paraguay')">
                        <group name="paraguay" string="Import">
                            <field name="vat_import" />
                        </group>
                    </page>
                </xpath>

            </field>
        </record>
    </data>
</odoo>