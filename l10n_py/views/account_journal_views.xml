<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_account_journal_form_inherited" model="ir.ui.view">
            <field name="name">view.account.journal.form.inherited</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='type']" position="after">
                    <field name="invoice_authorization_id" groups="account.group_account_manager"/>
                    <field name="max_lineas" invisible="type != 'sale'" groups="account.group_account_manager"/>
                </xpath>
            </field>
        </record>
    
    </data>
    

</odoo>
