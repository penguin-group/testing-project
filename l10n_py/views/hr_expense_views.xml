<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <data>
        
            <record id="view_hr_expense_form" model="ir.ui.view">
                <field name="name">view.hr.expense.form</field>
                <field name="model">hr.expense</field>
                <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//div[@id='payment_mode']" position="after">
                        <field name="create_vendor_bill" invisible="payment_mode != 'company_account'" widget="boolean_toggle"/>
                    </xpath>
                </field>
            </record>

        </data>

    </odoo>