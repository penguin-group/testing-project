<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <templates>
        <template id="bcp_exchange_rate_error_notification_l10n" name="BCP Exchange Error">
            <field name="model">res.company</field>
            <field name="subject">Error in exchange rate update (${ctx.get('provider', 'BCP')})</field>
            <field name="body_html" type="html">
                <![CDATA[
                    <html>
                        <body>
                            <p><strong>Automatically generated error</strong></p>
                            <p><strong>Provider:</strong> ${ctx.get('provider', 'BCP')}</p>
                            <p><strong>Error:</strong> ${ctx.get('error', 'Unknown error')}</p>
                        </body>
                    </html>
                ]]>
            </field>
        </template>
    </templates>
</odoo>
