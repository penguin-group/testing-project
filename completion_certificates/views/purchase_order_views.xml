<odoo>
    <data>
        <record id="view_purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button name="action_view_certificates"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-check-square-o"
                            invisible="not use_certificate">
                        <field name="certificate_count" widget="statinfo" string="Certificates"/>
                    </button>
                </xpath>

                <field name="invoice_status" position="before">
                    <field name="use_certificate" widget="boolean_toggle" readonly="state != 'draft'"/>
                </field>

                <xpath expr="//header/button[@name='action_create_invoice']" position="attributes">
                    <attribute name="invisible">state not in ('purchase', 'done') or invoice_status in ('no', 'invoiced') or use_certificate</attribute>
                </xpath>

                <xpath expr="//header/button[12]" position="attributes">
                    <attribute name="invisible">state not in ('purchase', 'done') or invoice_status in ('no', 'invoiced') or use_certificate</attribute>
                </xpath>
                    
            </field>
        </record>
    </data>
</odoo>