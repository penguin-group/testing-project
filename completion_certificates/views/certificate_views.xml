<odoo>
    <data>
        <!-- Action -->
        <record id="action_certificate" model="ir.actions.act_window">
            <field name="name">Certificates</field>
            <field name="res_model">certificate</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_certificate" name="Certificates" parent="purchase.menu_procurement_management" action="action_certificate" sequence="10"/> 

        <!-- List View -->
        <record id="view_certificate_list" model="ir.ui.view">
            <field name="name">view.certificate.list</field>
            <field name="model">certificate</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="purchase_order_id"/>
                    <field name="partner_id"/>
                    <field name="total"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'confirmed'"/>                
                </list>
            </field>
        </record>

        <!-- Filter View -->
        <record id="view_certificate_filter" model="ir.ui.view">
            <field name="name">view.certificate.filter</field>
            <field name="model">certificate</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="purchase_order_id"/>
                    <field name="partner_id"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                </search>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_certificate_form" model="ir.ui.view">
            <field name="name">view.certificate.form</field>
            <field name="model">certificate</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <span class="o_form_label" invisible="state not in ('draft', 'sent')">Completion Certificate</span>
                            <h1 class="d-flex">
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="ref"/>
                                <field name="purchase_order_id" options="{'no_create': True, 'no_create_edit': True}" readonly="state != 'draft'"/>
                                <field name="partner_id"/>
                                
                            </group>
                            <group>
                                <field name="date" readonly="state != 'draft'"/>
                                <field name="requester_id" options="{'no_create': True, 'no_create_edit': True}" readonly="state != 'draft'" widget="many2one_avatar_user"/>
                                <field name="vendor_bill_id" options="{'no_create': True, 'no_create_edit': True}" readonly="state != 'draft'"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Products">
                                <field name="line_ids" widget="one2many_list" readonly="state != 'draft'">
                                    <list string="Products" editable="bottom" limit="200">
                                        <field name="purchase_line_id" domain="[('order_id', '=', parent.purchase_order_id)]" options="{'no_create': True, 'no_create_edit': True}"/>
                                        <field name="description"/>
                                        <field name="qty"/>
                                        <field name="qty_processed"/>
                                        <field name="qty_received"/>
                                        <field name="price_unit"/>
                                        <field name="tax_ids" widget="many2many_tax_tags"/>
                                        <field name="price_subtotal"/>
                                        <field name="date_received"/>
                                    </list>
                                </field>
                                <group>
                                    <group>
                                        <field colspan="2" name="notes" nolabel="1" placeholder="Define your terms and conditions ..."/>
                                    </group>
                                    <group class="oe_subtotal_footer">
                                        <field name="total" nolabel="1" readonly="1"/>
                                    </group>
                                </group>
                                <div class="clearfix"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
    </data>
</odoo>