<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
    
        <record model="ir.ui.view" id="report_vat_sale_wizard_form">
            <field name="name">report.vat.sale.wizard.form</field>
            <field name="model">report.vat.sale.wizard</field>
            <field name="arch" type="xml">
                <form string="VAT Sale Book">
                    <group>
                        <group>
                            <field name="date_start" autocomplete="off"/>
                        </group>
                        <group>
                            <field name="date_end" autocomplete="off"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_report" string="Export to xlsx" type="object" 
                            class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="report_vat_sale_wizard_action" model="ir.actions.act_window">
            <field name="name">VAT Sale Book</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.vat.sale.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="report_vat_sale_wizard_menu" parent="account.menu_finance_receivables" 
            name="VAT Sale Book" sequence="11"
            action="report_vat_sale_wizard_action"/>

        <record id="report_vat_sale_report" model="ir.actions.report">
                <field name="name">VAT Sale Book</field>
                <field name="model">report.vat.sale.wizard</field>
                <field name="report_type">xlsx</field>
                <field name="report_name">l10n_py_account_vat_reports.report_vat_sale</field>
                <field name="report_file">l10n_py_account_vat_reports.report_vat_sale</field>
                <field name="print_report_name">'VAT Sale Book'</field>
        </record>
    
    </data>
    

</odoo>
