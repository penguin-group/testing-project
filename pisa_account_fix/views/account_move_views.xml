<odoo>
    <data>
        <record id="action_fix_reconciliation" model="ir.actions.server">
            <field name="name">Fix Reconciliation</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="state">code</field>
            <field name="code">
                records._fix_reconciliation()
            </field>
        </record>

        <record id="action_mark_as_not_fixed" model="ir.actions.server">
            <field name="name">Mark as Not Fixed</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="state">code</field>
            <field name="code">
            records.mark_as_not_fixed()
            </field>
        </record>
    </data>
</odoo>