<odoo>
    <data>
        <record id="action_compute_invoice_currency_rate" model="ir.actions.server">
            <field name="name">Compute Invoice Currency Rate</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                    records._compute_invoice_currency_rate()
            </field>
        </record>

        <record id="action_fix_reconciliation" model="ir.actions.server">
            <field name="name">Fix Reconciliation</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                    records._fix_reconciliation()
            </field>
        </record>
    </data>
</odoo>