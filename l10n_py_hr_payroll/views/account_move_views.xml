<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action for Invoice-based Compensation -->
    <record id="action_invoice_based_compensation" model="ir.actions.act_window">
        <field name="name">Invoice-based Compensation</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('move_type', '=', 'in_invoice')]</field>
        <field name="context">{
            'default_move_type': 'in_invoice',
            'search_default_contractor_bills': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first contractor bill
            </p>
            <p>
                Create bills for employees who work under invoice-based compensation.
            </p>
        </field>
    </record>

    <!-- Search View Extension -->
    <record id="view_account_invoice_contractor_filter" model="ir.ui.view">
        <field name="name">view.account.invoice.contractor.filter</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='posted']" position="after">
                <filter string="Contractor Bills" name="contractor_bills"
                        domain="[('partner_id.employee_ids.employee_type', '=', 'contractor')]"/>
            </xpath>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_invoice_based_compensation"
        name="Invoice-based Compensation"
        action="action_invoice_based_compensation"
        parent="hr_payroll.menu_hr_payroll_payslips"
        sequence="16"
        groups="hr_payroll.group_hr_payroll_user"/>
</odoo>