<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="rule_account_move_payroll_contractor" model="ir.rule">
            <field name="name">Payroll User: See Only Contractor Invoices</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="groups" eval="[(4, ref('hr_payroll.group_hr_payroll_user'))]"/>
            <field name="domain_force">[
                '|',
                    ('partner_id.employee_ids.employee_type', '=', 'contractor'),
                    ('move_type', '!=', 'in_invoice')
            ]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>