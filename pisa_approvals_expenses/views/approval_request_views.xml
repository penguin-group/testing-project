<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="approval_request_view_form_inherit" model="ir.ui.view">
        <field name="name">approval.request.view.form.inherit</field>
        <field name="model">approval.request</field>
        <field name="inherit_id" ref="approvals.approval_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount']" position="after">
                <field name="has_currency" invisible="1" />
                <field name="has_bank_account" invisible="1" />

                <field name="currency_id"
                       invisible="has_currency == 'no'"
                       required="has_currency == 'required'" />
                <field name="bank_account_id"
                       invisible="has_bank_account == 'no'"
                       required="has_bank_account == 'required'" />
            </xpath>

        </field>
    </record>
</odoo>
