<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="approval_request_view_form_inherit" model="ir.ui.view">
        <field name="name">approval.request.view.form.inherit</field>
        <field name="model">approval.request</field>
        <field name="inherit_id" ref="approvals.approval_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount']" position="after">
                <field name="has_currency" invisible="1" />
                <field name="has_bank_account" invisible="1" />

                <field name="currency_id"
                       invisible="has_currency == 'no'"
                       required="has_currency == 'required'"
                       readonly="request_status != 'new'" />
                <field name="bank_account_id"
                       invisible="has_bank_account == 'no'"
                       required="has_bank_account == 'required'"
                       readonly="request_status != 'new'" />
            </xpath>

            <div name="button_box" position="inside">
                <button class="oe_stat_button"
                        type="object"
                        icon="fa-pencil-square-o"
                        name="action_view_vendor_bill"
                        invisible="related_vendor_bill == False">
                    <div>
                        <span class="o_stat_text">Vendor Bill</span>
                    </div>
                </button>
            </div>

            <xpath expr="//header/field[@name='request_status']" position="replace">
                <field name="request_status"
                       widget="statusbar"
                       statusbar_visible="new,pending,approved,refused"
                       invisible="approval_type == 'create_vendor_bill_adv'"/>


                <field name="request_status"
                       widget="statusbar"
                       statusbar_visible="new,pending,approved,refused,paid"
                       invisible="approval_type != 'create_vendor_bill_adv'"/>

            </xpath>
        </field>

    </record>
</odoo>
