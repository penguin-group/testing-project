<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="approval_category_view_form_inherit" model="ir.ui.view">
        <field name="name">approval.category.view.form.inherit</field>
        <field name="model">approval.category</field>
        <field name="inherit_id" ref="approvals.approval_category_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='has_location']" position="after">
                <field name="has_currency"
                       widget="radio"
                       options="{'horizontal': true}"
                       readonly="approval_type == 'create_vendor_bill_adv'"
                       force_save="1" />
                <field name="has_bank_account"
                       widget="radio"
                       options="{'horizontal': true}"
                       readonly="approval_type == 'create_vendor_bill_adv'"
                       force_save="1" />
            </xpath>

            <xpath expr="//field[@name='has_amount']" position="attributes">
                <attribute name="readonly">approval_type == 'create_vendor_bill_adv'</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
