<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record id="view_sa_request_page" model="ir.ui.view">
      <field name="name">Salary Advance Request</field>
      <field name="type">qweb</field>
      <field name="key">website_salary_attachment_request.sa_request_page</field>
      <field name="arch" type="xml">
        <t t-name="website_salary_attachment_request.sa_request_page">
          <t t-call="website.layout">
            <div class="container mt-4 mb-5" id="sa-form">
              <h2><t t-esc="request.env._('Salary Advance Request')"/></h2>
              <div class="alert alert-info mt-3">
                <ul>
                  <li>
                    <p class="mb-2">
                      <t t-esc="request.env._('Salary advances may be requested by any employee who has passed the probationary period.')"/>
                    </p>
                  </li>
                  <li>
                    <p class="mb-2">
                      <t t-esc="request.env._('Advances will be credited on the 15th of the month or if the 15th falls on a weekend or holiday, the credit will be made on the previous business day.')"/>
                    </p>
                  </li>
                  <li>
                    <p class="mb-2">
                      <t t-esc="request.env._('No requests for salary credits will be received other than through this form.')"/>
                    </p>
                  </li>
                  <li>
                    <p class="mb-2">
                      <t t-esc="request.env._('The amount requested will only be credited to the bank account authorized for the payment of salaries, any other method requested will be authorized by the Head of People &amp; Culture.')"/>
                    </p>
                  </li>
                  <li>
                    <p class="mb-0">
                      <t t-esc="request.env._('Advances requested in the month will be deducted in the period in which they were requested, and cannot be divided.')"/>
                    </p>
                  </li>
                </ul>
              </div>
              <form id="salaryAttachmentForm" class="mt-3">
                <!-- Employee Name -->
                <div class="mb-3">
                  <label class="form-label">
                    <t t-esc="request.env._('Employee Name *')"/>
                  </label>
                  <input type="text" id="sa_emp_name" class="form-control" readonly="readonly" required="required"/>
                </div>

                <!-- Identification Number -->
                <div class="mb-3">
                  <label class="form-label">
                    <t t-esc="request.env._('Identification Number *')"/>
                  </label>
                  <input type="text" id="sa_emp_idnum" class="form-control" readonly="readonly" required="required"/>
                </div>

                <!-- Work Location -->
                <div class="mb-3">
                  <label class="form-label">
                    <t t-esc="request.env._('Work Location *')"/>
                  </label>
                  <input type="text" id="sa_emp_address" class="form-control" readonly="readonly" required="required"/>
                </div>

                <!-- Frequency -->
                <div class="mb-3">
                  <label class="form-label">
                    <t t-esc="request.env._('Request Frequency *')"/>
                  </label>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="frequency" id="freq_once" value="one_time" required="required"/>
                    <label class="form-check-label" for="freq_once">
                      <t t-esc="request.env._('One-time')"/>
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="frequency" id="freq_perm" value="permanent"/>
                    <label class="form-check-label" for="freq_perm">
                      <t t-esc="request.env._('Recurring')"/>
                    </label>
                  </div>
                </div>

                <!-- Requested Amount -->
                <div class="mb-3">
                  <label class="form-label" id="sa_amount_label">
                    <t t-esc="request.env._('Requested Amount *')"/>
                  </label>
                  <input type="number" step="1" min="1" id="sa_amount" class="form-control" required="required" placeholder="0"/>
                  <div class="form-text" id="sa_amount_hint"></div>
                </div>

                <!-- Hidden -->
                <input type="hidden" id="sa_emp_id"/>

                <button type="submit" class="btn btn-primary">
                  <t t-esc="request.env._('Submit')"/>
                </button>
                <div id="sa_msg" class="mt-3 text-muted"></div>
              </form>
              <div id="sa_success" class="alert alert-success mt-4 d-none" role="alert"></div>
            </div>
          </t>
        </t>
      </field>
    </record>
  </data>
</odoo>
