                    <page string="Timbrado" invisible="type != 'sale'">
                        <field name="timbrados_ids" context="{ 'default_journal_id':id }"/>
                    </page>

                </xpath>
                <xpath expr="//page[@name='advanced_settings']/group" position="inside">
                    <group string="ImpresiÃ³n de facturas" groups="account.group_account_manager"
                           invisible="type != 'sale'">
                        <field name="max_lineas"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>