<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="view_move_form" model="ir.ui.view">
            <field name="name">view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button string="Anular factura" type="object" name="button_anular"
                            invisible="id == False or state == 'cancel' or move_type not in ['out_invoice', 'out_refund']"/>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="replace">
                    <button string="Cancelar" type="object" name="button_cancel"
                            invisible="id == False or state != 'draft' or move_type in ['out_invoice', 'out_refund']"/>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button string="Actualizar Nro. de factura" type="object" name="button_actualizar_nro_factura"
                            invisible="move_type not in ['out_invoice', 'out_refund'] or state not in ['open', 'paid', 'cancel']"
                            groups="account.group_account_manager"/>
                </xpath>
                <!--xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name="groups">account.group_account_invoice</attribute>

                </xpath-->
                <xpath expr="//field[@name='ref']/.." position="inside">
                    <!--                    <label for="timbrado_proveedor"/>-->
                    <field name="timbrado_proveedor"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
