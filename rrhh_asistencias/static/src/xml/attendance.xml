<?xml version="1.0" encoding="utf-8"?>
<template xml:space="preserve">
	<t t-inherit="hr_attendance.HrAttendanceGreetingMessage" t-inherit-mode="extension">
		<xpath expr="//t[@t-if='widget.attendance.check_out']" position="replace">
			<t t-if="widget.attendance.salida_marcada">
				<h1 class="mb0">Goodbye
					<t t-esc="widget.employee_name"/>!
				</h1>
                <h2 class="o_hr_attendance_message_message mt4 mb24"/>
                <h3 class="o_hr_attendance_random_message mb24"/>
                <div class="o_hr_attendance_warning_message mt24 alert alert-warning" style="display:none" role="alert"/>
			</t>
		</xpath>
	</t>
</template>