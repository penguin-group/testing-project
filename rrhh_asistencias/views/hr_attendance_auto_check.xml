<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_attendance_auto_check_form_view" model="ir.ui.view">
            <field name="name">hr_attendance_auto_check_form_view</field>
            <field name="model">hr.attendance.auto_check</field>
            <field name="arch" type="xml">
                <form string="Marcaciones automáticas">
                    <sheet>
                        <div class="oe_title">
                            <label for="employee_id"/>
                            <h1>
                                <field name="employee_id" placeholder="Empleado"/>
                            </h1>
                        </div>
                        <group>
                            <field name="contract_id" domain="[('employee_id','=',employee_id),('state','=','open')]" placeholder="Contrato"/>
                        </group>
                        <group>
                            <field name="check_type"/>
                            <field name="day_period"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_attendance_auto_check_tree_view" model="ir.ui.view">
            <field name="name">hr_attendance_auto_check_tree_view</field>
            <field name="model">hr.attendance.auto_check</field>
            <field name="arch" type="xml">
                <tree string="Marcaciones automáticas">
                    <field name="employee_id"/>
                    <field name="contract_id"/>
                    <field name="check_type"/>
                </tree>
            </field>
        </record>

