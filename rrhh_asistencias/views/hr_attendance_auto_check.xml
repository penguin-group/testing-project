        <record id="hr_attendance_auto_check_act_window" model="ir.actions.act_window">
            <field name="name">Marcaciones automáticas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.attendance.auto_check</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Defina la primera marcación automática.
                </p>
            </field>
        </record>

        <menuitem name="Marcaciones automáticas" id="hr_attendance_auto_check_menu" parent="rrhh_asistencias.menu_asistencias_padre"
                  action="hr_attendance_auto_check_act_window"/>

    </data>
