<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="rrhh_asistencias.hr_attendance_tree_view_mod">
            <field name="name">rrhh_asistencias.hr_attendance_tree_view_mod</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="edit">0</attribute>
                    <attribute name="decoration-danger">asistencia_fuera_de_planeado == True</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='check_in']" position="replace">
                    <field name="asistencia_fuera_de_planeado" invisible="True"/>
                    <field name="contract_id"/>
                    <field name="date"/>
                    <field name="day_period"/>
                    <field widget="float_time" name="entrada_marcada"/>
                    <field widget="float_time" name="salida_marcada"/>
                </xpath>
                <xpath expr="//tree/field[@name='check_out']" position="replace"/>
            </field>
        </record>
        <record model="ir.actions.act_window" id="hr_attendance.hr_attendance_action">
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.ui.view" id="rrhh_asistencias.hr_attendance_view_form">
            <field name="name">rrhh_asistencias.hr_attendance_view_form</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
            <field name="arch" type="xml">
                <sheet position="replace">
                    <sheet>
                        <field name="asistencia_fuera_de_planeado" invisible="True"/>
                        <field name="asistencia_feriado" invisible="True"/>
                        <h3 attrs="{'invisible':[('asistencia_fuera_de_planeado','=',False)]}"
                            style="color:darkred;">
                            Esta asistencia está fuera del horario planeado del contrato.
                        </h3>
                        <h3 attrs="{'invisible':[('asistencia_feriado','=',False)]}"
                            style="color:darkred;">
                            Esta asistencia se encuentra en un día declarado como feriado.
                        </h3>
                        <group string="Datos del empleado">
                            <field name="employee_id"/>
                            <field name="contract_id" domain="[('employee_id','=',employee_id)]" attrs="{'readonly':[('employee_id','=',False)]}"/>
                        </group>
                        <group string="Datos de la asistencia">
                            <group>
                                <field name="date"/>
                                <field widget="float_time" name="entrada_marcada"/>
                                <field widget="float_time" name="salida_marcada"/>
                            </group>
                            <group attrs="{'invisible':[('asistencia_fuera_de_planeado','=',True)]}">
                                <field name="day_period"/>
                                <field widget="float_time" name="entrada_planeada"/>
                                <field widget="float_time" name="salida_planeada"/>
                                <field name="resource_calendar_id"/>
                            </group>
                        </group>
                        <group string="Cálculo de horas">
                            <group>
                                <field widget="float_time" name="horas_extra_50"/>
                                <field name="se_procesa_horas_extra_50" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field widget="float_time" name="horas_extra_100"/>
                                <field name="se_procesa_horas_extra_100" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field widget="float_time" name="horas_extra_nocturnas"/>
                                <field name="se_procesa_horas_extra_nocturnas" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field widget="float_time" name="horas_nocturnas"/>
                                <field name="se_procesa_horas_nocturnas" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field widget="float_time" name="llegada_anticipada"/>
                                <field name="se_procesa_llegada_anticipada" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field widget="float_time" name="llegada_tardia"/>
                                <field name="se_procesa_llegada_tardia" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field widget="float_time" name="salida_anticipada"/>
                                <field name="se_procesa_salida_anticipada" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <!-- <field widget="float_time" name="total_plus_horario" /> -->
                                <field name="es_plus_horario" widget="boolean_toggle"/>
                                <field name="se_procesa_plus_hora" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="es_mix_horario" widget="boolean_toggle"/>
                                <field name="se_procesa_mix_hora" widget="boolean_toggle"/>
                            </group>
                        </group>
                    </sheet>
                </sheet>
            </field>
        </record>
        <record model="ir.ui.menu" id="hr_attendance.menu_hr_attendance_view_attendances">
            <field name="parent_id" ref="rrhh_asistencias.menu_asistencias_padre"/>
        </record>
        <record model="ir.ui.menu" id="hr_attendance.menu_hr_attendance_attendances_overview">
            <field name="parent_id" ref="rrhh_asistencias.menu_asistencias_padre"/>
        </record>
    </data>
</odoo>
