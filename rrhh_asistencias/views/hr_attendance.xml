<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="rrhh_asistencias.hr_attendance_tree_view_mod" model="ir.ui.view">
            <field name="name">rrhh_asistencias.hr_attendance_tree_view_mod</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="edit">
                        0</attribute>
                    <attribute name="decoration-danger">
                        asistencia_fuera_de_planeado == True</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='check_in']" position="replace">
                    <field invisible="True" name="asistencia_fuera_de_planeado"/>
                    <field name="contract_id"/>
                    <field name="date"/>
                    <field name="day_period"/>
                    <field name="entrada_marcada" widget="float_time"/>
                    <field name="salida_marcada" widget="float_time"/>
                </xpath>
                <xpath expr="//tree/field[@name='check_out']" position="replace"/></field>
        </record>
        <record id="hr_attendance.hr_attendance_action" model="ir.actions.act_window">
            <field name="view_mode">tree,form</field>
        </record>
        <record id="rrhh_asistencias.hr_attendance_view_form" model="ir.ui.view">
            <field name="name">rrhh_asistencias.hr_attendance_view_form</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
            <field name="arch" type="xml">
                <sheet position="replace">
                    <sheet>
                        <field invisible="True" name="asistencia_fuera_de_planeado"/>
                        <field invisible="True" name="asistencia_feriado"/>
                        <h3 invisible="asistencia_fuera_de_planeado == False" style="color:darkred;">
                            Esta asistencia está fuera del horario planeado del contrato.
                        </h3>
                        <h3 invisible="asistencia_feriado == False" style="color:darkred;">
                            Esta asistencia se encuentra en un día declarado como feriado.
                        </h3>
                        <group string="Datos del empleado">
                            <field name="employee_id"/>
                            <field domain="[('employee_id','=',employee_id)]" name="contract_id" readonly="employee_id == False"/>
                        </group>
                        <group string="Datos de la asistencia">
                            <group>
                                <field name="date"/>
                                <field name="entrada_marcada" widget="float_time"/>
                                <field name="salida_marcada" widget="float_time"/>
                            </group>
                            <group invisible="asistencia_fuera_de_planeado == True">
                                <field name="day_period"/>
                                <field name="entrada_planeada" widget="float_time"/>
                                <field name="salida_planeada" widget="float_time"/>
                                <field name="resource_calendar_id"/>
                            </group>
                        </group>
                        <group string="Cálculo de horas">
                            <group>
                                <field name="horas_extra_50" widget="float_time"/>
                                <field name="se_procesa_horas_extra_50" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="horas_extra_100" widget="float_time"/>
                                <field name="se_procesa_horas_extra_100" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="horas_extra_nocturnas" widget="float_time"/>
                                <field name="se_procesa_horas_extra_nocturnas" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="horas_nocturnas" widget="float_time"/>
                                <field name="se_procesa_horas_nocturnas" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="llegada_anticipada" widget="float_time"/>
                                <field name="se_procesa_llegada_anticipada" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="llegada_tardia" widget="float_time"/>
                                <field name="se_procesa_llegada_tardia" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="salida_anticipada" widget="float_time"/>
                                <field name="se_procesa_salida_anticipada" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <!-- <field widget="float_time" name="total_plus_horario" /> -->
                                <field name="es_plus_horario" widget="boolean_toggle"/>
                                <field name="se_procesa_plus_hora" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="es_mix_horario" widget="boolean_toggle"/>
                                <field name="se_procesa_mix_hora" widget="boolean_toggle"/>
                            </group>
                        </group>
                    </sheet>
                </sheet></field>
        </record>
        <record id="hr_attendance.menu_hr_attendance_view_attendances" model="ir.ui.menu">
            <field name="parent_id" ref="rrhh_asistencias.menu_asistencias_padre"/>
        </record>
        <!-- <record id="hr_attendance.menu_hr_attendance_root" model="ir.ui.menu">
            <field name="parent_id" ref="rrhh_asistencias.menu_asistencias_padre"/>
        </record> -->
    </data>
</odoo>
