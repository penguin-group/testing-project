<odoo>
    <data>
        <record model="ir.ui.view" id="marcaciones_tree_view">
            <field name="name">marcaciones_tree_view</field>
            <field name="model">rrhh_asistencias.marcaciones</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" decoration-success="marcacion_procesada == False"
                      decoration-danger="marcacion_procesada == True and asistencia_creada == False">
                    <!--                    <field name="id_marcador"/>-->
                    <field name="id_marcacion"/>
                    <field name="employee_id"/>
                    <field name="fecha_hora"/>
                    <field name="fecha"/>
                    <field name="hora" widget="float_time"/>
                    <field name="id_marcador"/>
                    <field name="comentario"/>
                    <field name="marcacion_procesada" invisible="1"/>
                    <field name="asistencia_creada" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="marcaciones_search_view">
            <field name="name">marcaciones_search_view</field>
            <field name="model">rrhh_asistencias.marcaciones</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="0" string="Group By">
                        <field name="id_marcacion" filter_domain="[('id_marcacion','=',self)]"/>
                        <field name="employee_id" filter_domain="[('employee_id','ilike',self)]"/>
                        <filter string="Compañía" name="group_by_company_id" domain="[]" context="{'group_by':'company_id'}"/>
                        <filter string="ID Marcación" name="group_by_id_marcacion" domain="[]" context="{'group_by':'id_marcacion'}"/>
                        <filter string="Reloj Marcador" name="group_by_id_marcador" domain="[]" context="{'group_by':'id_marcador'}"/>
                        <filter string="Comentario" name="group_by_comentario" domain="[]" context="{'group_by':'comentario'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="marcaciones_action_window">
            <field name="name">Marcaciones</field>
            <field name="res_model">rrhh_asistencias.marcaciones</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="Marcaciones" id="menu_item_marcaciones"
                  parent="rrhh_asistencias.menu_asistencias_padre"
                  action="marcaciones_action_window"/>
    </data>
    <data>
        <record id="wizard_reset_marcaciones_view_form" model="ir.ui.view">
            <field name="name">wizard_reset_marcaciones_view_form</field>
            <field name="model">rrhh_asistencias.wizard_reset_marcaciones</field>
            <field name="arch" type="xml">
                <form string="wizard_reset_marcaciones_form">
                    <sheet>
                        <group>
                            <field name="marcaciones_ids_count"/>
                        </group>
                        <div>
                            <span>Antes de reprocesar las marcaciones, debe eliminar las asistencias para sí evitar la duplicación de datos</span>
                        </div>
                        <footer>
                            <button name="reset_marcaciones" string="Reprocesar Marcaciones" type="object" class="oe_highlight"/>
                            <button string="Cancel" special="cancel" class="oe_highlight"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>