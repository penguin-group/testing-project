<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_hhrr_asistencias_inherit" model="ir.ui.view">
        <field name="name">res.config.hhrr.asistencias.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//block[@name='overtime_settings']/setting/div" position="inside">
                <label class="o_form_label" for="overtime_employee_threshold_early_leaves">
                    Tiempo de tolerancia a favor de la empresa
                </label>
                <div class="text-muted">
                    Permitir un periodo de tiempo (en horas de trabajo) en el que la salida anticipada no se descontará, en beneficio del empleado.
                </div>
                <span>
                    Periodo de tiempo
                </span>
                <field class="text-center oe_inline" name="overtime_employee_threshold_early_leaves" required="hr_attendance_overtime == True"/>
                <span>
                    Minutos
                </span>
            </xpath>

            <xpath expr="//block[@name='overtime_settings']" position="before">
                <block title="Considerar asistencias">
                    <setting string="Llegada anticipada">
                        <field name="considerar_llegada_anticipada"/>
                    </setting>
                    <setting string="Llegada tardía">
                        <field name="considerar_llegada_tardia"/>
                    </setting>
                    <setting string="Salida anticipada">
                        <field name="considerar_salida_anticipada"/>
                    </setting>
                    <setting string="Horas extra 50%">
                        <field name="considerar_horas_extra_50"/>
                    </setting>
                    <setting string="Horas extra 100%">
                        <field name="considerar_horas_extra_100"/>
                    </setting>
                    <setting string="Horas extra Nocturnas">
                        <field name="considerar_horas_extra_nocturnas"/>
                    </setting>
                    <setting string="Horas Nocturnas">
                        <field name="considerar_horas_nocturnas"/>
                    </setting>
                    <setting string="Horas Nocturnas dentro del horario planeado">
                        <field name="considerar_horas_nocturnas_en_planeado"/>
                    </setting>
                    <setting string="Considerar Horas Plus">
                        <field name="considerar_plus_hora"/>
                    </setting>
                    <setting string="Inicio hora plus">
                        <field name="inicio_plus" widget="float_time"/>
                    </setting>
                    <setting string="Fin hora plus">
                        <field name="fin_plus" widget="float_time"/>
                    </setting>
                    <setting string="Considerar Horario Mixto">
                        <field name="considerar_mix_hora"/>
                    </setting>
                    <setting string="Inicio horario mixto">
                        <field name="inicio_mix" widget="float_time"/>
                    </setting>
                    <setting string="Fin horario mixto">
                        <field name="fin_mix" widget="float_time"/>
                    </setting>
                </block>
            </xpath>

        </field>

    </record>
</odoo>
