<odoo>
    <data>
        <record model="ir.ui.view" id="hr_employee_form_inherit">
            <field name="name">hr_employee_form_inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='payroll_group']" position="inside">
                    <field name="id_marcacion"/>
                    <field name="no_attendance_is_absence" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>