<odoo>
    <data>

        <record id="hr_attendance_rule_own_contract" model="ir.rule">
            <field name="name">Manual Attendance: own contracts</field>
            <field name="model_id" ref="model_hr_contract"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        </record>
        <record id="hr_attendance_rule_all_contract" model="ir.rule">
            <field name="name">Manual Attendance: all contracts</field>
            <field name="model_id" ref="model_hr_contract"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="groups" eval="[(4,ref('hr_contract.group_hr_contract_manager'))]"/>
        </record>
        <record id="hr_attendance_calendar_company_id_rule" model="ir.rule">
            <field name="name">Planeamiento de Asistencias: Compañías</field>
            <field name="model_id" ref="rrhh_asistencias.model_hr_attendance_calendar"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

    </data>
</odoo>
