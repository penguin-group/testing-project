<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res_config_settings_view_form_inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@data-key='account']" position="inside">
                    <h2>Control estricto de RUC</h2>
                    <div class="row mt16 o_settings_container" id="no_contact_main_vat_duplicates_setting_container">
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="no_contact_main_vat_duplicates"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="no_contact_main_vat_duplicates"/>
                                <div class="text-muted">
                                    No permitir la creaci√≥n de contactos principales (que no pertenezcan a una empresa o sean subcontactos de una) que
                                    tengan el mismo RUC que otro contacto ya existente
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>