<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="interfaces_reg_rubrica_tree">
            <field name="name">interfaces_rubrica_free</field>
            <field name="model">interfaces_rubrica.registro_rubrica</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="company_id" />
                    <field name="nro_ini" />
                    <field name="nro_fin" />
                    <field name="type" />
                    <field name="activo" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="interfaces_reg_rubrica_form">
            <field name="name">interfaces_rubrica_form</field>
            <field name="model">interfaces_rubrica.registro_rubrica</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="activo" required="1" />
                                <field name="company_id" required="1" />
                                <field name="nro_ini" required="1"/>
                                <field name="nro_fin" required="1"/>
                                <field name="nro_actual" required="1"/>
                                <field name="type" required="1" />
                                <field name="imagen" required="0" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="interfaces_reg_rubrica_action_window">
            <field name="name">Registro de Rúbricas</field>
            <field name="res_model">interfaces_rubrica.registro_rubrica</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_registro_rubirca" name="Registro de Rúbrica" parent="account.menu_finance_entries" action="interfaces_reg_rubrica_action_window" sequence="100" />
    </data>
</odoo>
