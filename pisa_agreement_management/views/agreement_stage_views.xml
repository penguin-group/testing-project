<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_agreement_stage" model="ir.actions.act_window">
        <field name="name">Agreement Stages</field>
        <field name="res_model">agreement.stage</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_pisa_agreement_stage_form" model="ir.ui.view">
        <field name="name">pisa.agreement.stage.form</field>
        <field name="model">agreement.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" />
                            <field name="fold" />
                            <field name="sequence" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>