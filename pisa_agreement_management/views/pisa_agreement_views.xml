<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_pisa_agreement" model="ir.actions.act_window">
        <field name="name">Pisa Agreements</field>
        <field name="res_model">pisa.agreement</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <record id="view_pisa_agreement_list" model="ir.ui.view">
        <field name="name">pisa.agreement.list</field>
        <field name="model">pisa.agreement</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_pisa_agreement_form" model="ir.ui.view">
        <field name="name">pisa.agreement.form</field>
        <field name="model">pisa.agreement</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_ids" widget="many2many_tags" />
                            <field name="signature_date"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="agreement_type"/>
                            <field name="legal_process_type"/>
                            <field name="related_agreements" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Key Obligations" >
                            <field name="key_obligations" />
                        </page>
                    </notebook>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_pisa_agreement_kanban" model="ir.ui.view">
       <field name="name">pisa.agreement.kanban</field>
       <field name="model">pisa.agreement</field>
       <field name="arch" type="xml">
           <kanban class="o_kanban_mobile" default_group_by="stage_id" groups_draggable="1" sample="1" on_create="quick_create">
               <templates>
                   <t t-name="card">
                       <div class="d-flex mb-2" style="justify-content: space-between;">
                           <field name="name" class="fw-bolder fs-5" />
                       </div>
                   </t>
               </templates>
           </kanban>
       </field>
   </record>
</odoo>
