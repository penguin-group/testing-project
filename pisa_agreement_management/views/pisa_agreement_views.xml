<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pisa_agreement_list" model="ir.ui.view">
        <field name="name">pisa.agreement.list</field>
        <field name="model">pisa.agreement</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_pisa_agreement_form" model="ir.ui.view">
        <field name="name">pisa.agreement.form</field>
        <field name="model">pisa.agreement</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                            <h1>
                                <field name="name" readonly="stage != 'draft'"/>
                            </h1>
                        </div>
                    <group>
                        <group>
                            <field name="partner_ids" widget="many2many_tags" />
                            <field name="signature_date"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="agreement_type"/>
                            <field name="legal_process_type"/>
                            <field name="related_agreements" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Key Obligations" >
                            <field name="key_obligations" />
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pisa_agreement" model="ir.actions.act_window">
        <field name="name">Pisa Agreements</field>
        <field name="res_model">pisa.agreement</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
