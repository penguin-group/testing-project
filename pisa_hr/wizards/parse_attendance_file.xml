<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="parse_attendance_file_form" model="ir.ui.view">
            <field name="name">parse.attendance.file.form</field>
            <field name="model">parse.attendance.file.wizard</field>
            <field name="arch" type="xml">
                <form string="Parse Attendance File">
                    <sheet>
                        <group>
                            <field name="csv_file" options="{'accepted_file_extensions': 'text/csv'}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="parse_csv" string="Download new CSV" type="object" class="btn-primary"/>
                        <button string="Cancel" type="object" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="parse_attendance_file_action" model="ir.actions.act_window">
            <field name="name">Parse Attendance File</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">parse.attendance.file.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>


</odoo>
