<odoo>

    <record id="view_purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,sent,purchase,rfq_completed,technical_review,sourcing_strategy</attribute>
            </xpath>

            <xpath expr="//field[@name='user_id']" position="after">
                <field name="assignee_id" domain="[('share', '=', False)]" widget="many2one_avatar_user"/>
            </xpath>

            <xpath expr="//field[@name='origin']" position="after">
                <field name="certificate_id" options='{"always_reload": True}'/>
            </xpath>


        </field>
    </record>

</odoo>    
    

