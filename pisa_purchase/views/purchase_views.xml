<odoo>

    <record id="view_purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,sent,purchase,technical_review,sourcing_strategy</attribute>
            </xpath>

            <xpath expr="//field[@name='user_id']" position="after">
                <field name="assignee_id" domain="[('share', '=', False)]" widget="many2one_avatar_user"/>
            </xpath>

            <xpath expr="//button[@name='button_confirm']" position="attributes">
                <attribute name="invisible">state != 'sourcing_strategy'</attribute>
            </xpath>

            <xpath expr="//button[9]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//button[@name='button_confirm']" position="before">
                <button name="action_request_technical_review" string="Request Technical Review" type="object" class="oe_highlight" invisible="state != 'sent'"  groups="purchase.group_purchase_manager"/>
            </xpath>

            <xpath expr="//button[@name='button_confirm']" position="before">
                <button name="action_request_sourcing_strategy" string="Request Sourcing Strategy" type="object" class="oe_highlight" invisible="state != 'technical_review'" groups="purchase.group_purchase_manager"/>
            </xpath>


        </field>
    </record>

</odoo>    
    

