<odoo>

    <record id="view_purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='user_id']" position="after">
                <field name="assignee_id" domain="[('share', '=', False)]" widget="many2one_avatar_user"/>
                <field name="off_budget" string="Off-Budget" widget="boolean_toggle" readonly="state not in ['draft', 'sent']"/>
            </xpath>

            <xpath expr="//field[@name='origin']" position="after">
                <field name="extra_cost_po_ids" widget="many2many_tags" 
                    domain="[('state', 'in', ('purchase', 'done'))]"
                    context="{'default_partner_id': partner_id}"/>
            </xpath>

            <!-- Hide the 'Create' option in the product_id field -->
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>

            <xpath expr="//button[@name='button_cancel']" position="attributes">
                <attribute name="name">action_cancel_with_confirmation</attribute>
                <attribute name="type">object</attribute>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="open_wizard_to_create_bill_with_attachment" type="object" invisible="invoice_count > 0 or state not in ['done', 'purchase']" class="oe_highlight">
                    Create Bill and Attach File
                </button>
            </xpath>

        </field>
    </record>

    <record id="purchase_order_kpis_tree_inherited" model="ir.ui.view">
        <field name="name">purchase.order.kpis.tree.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="next_review" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="purchase.purchase_form_action" model="ir.actions.act_window">
        <field name="context">{'from_purchase': True}</field>
    </record>

    <record id="action_set_currency_on_purchase_orders" model="ir.actions.server">
        <field name="name">Set Currency</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="state">code</field>
        <field name="binding_type">action</field>
        <field name="code">
view = env.ref('pisa_purchase.view_purchase_currency_wizard_form')
action = {
    'type': 'ir.actions.act_window',
    'res_model': 'purchase.currency.wizard',
    'view_mode': 'form',
    'target': 'new',
    'context': {'active_ids': records.ids},
    'name': 'Set Currency',
    'view_id': view.id,
}
        </field>
    </record>

</odoo>
