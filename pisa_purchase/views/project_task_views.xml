<odoo>
    <data>
        <record id="view_project_task_form_inherit" model="ir.ui.view">
            <field name="name">project.task.form.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="after">
                    <label for="purchase_line_id"/>
                    <div name="purchase_line_div" class="o_row">
                        <field name="purchase_line_id" string="Purchase Order Item" readonly="0"/>
                        <span class="fa fa-exclamation-triangle text-warning" 
                            title="The purchase order associated with this task has been cancelled. 
                            We recommend either updating the purchase order item or cancelling this task 
                            in alignment with the cancellation of the purchase order." 
                            invisible="purchase_order_state != 'cancel'"
                        />
                    </div>
                    <field name="purchase_order_state" invisible="1"/>
                </xpath>

            </field>
        </record>

        <record id="project_milestone_view_list_inherit" model="ir.ui.view">
            <field name="name">project.milestone.view.list.inherit</field>
            <field name="model">project.milestone</field>
            <field name="inherit_id" ref="project.project_milestone_view_tree"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="purchase_line_id" optional="hide" options="{'no_open': True, 'no_create': True}" placeholder="Non-billable" readonly="1" groups="!sales_team.group_sale_salesman"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>