<odoo>
    <data>
        <record id="view_purchase_certificate_form" model="ir.ui.view">
            <field name="name">purchase.certificate.form</field>
            <field name="model">purchase.certificate</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/> 
                        <button name="action_confirm" string="Approve" type="object" invisible="state in ('sent', 'approved')" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="certificate_file" widget="pdf_viewer"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="view_purchase_certificate_list" model="ir.ui.view">
            <field name="name">purchase.certificate.list</field>
            <field name="model">purchase.certificate</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="action_purchase_certificate" model="ir.actions.act_window">
            <field name="name">Purchase Certificates</field>
            <field name="res_model">purchase.certificate</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_purchase_certificate_list"/>
        </record>

        <menuitem id="menu_purchase_certificate" name="Certificates"
            parent="purchase.menu_procurement_management" action="action_purchase_certificate" sequence="10"/>
    </data>
</odoo>

