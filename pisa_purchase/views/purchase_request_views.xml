<odoo>
    <data>
        <record id="view_purchase_request_form_inherit" model="ir.ui.view">
            <field name="name">purchase.request.form.inherit</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="project_id" options="{'no_create': True, 'no_create_edit': True}"/>
                    <field name="request_assistance" string="Request Procurement Assistance" widget="boolean_toggle"/>
                    <field name="off_budget" string="Off-Budget" widget="boolean_toggle" readonly="purchase_count > 0"/>
                </field>
            </field>
        </record>
    </data>
</odoo>