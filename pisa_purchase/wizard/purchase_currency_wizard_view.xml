<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_currency_wizard_form" model="ir.ui.view">
        <field name="name">purchase.currency.wizard.form</field>
        <field name="model">purchase.currency.wizard</field>
        <field name="arch" type="xml">
            <form string="Set Currency on Purchase Orders">
                <group>
                    <field name="currency_id"/>
                </group>
                <footer>
                    <button name="apply_currency" type="object" string="Apply" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_currency_wizard" model="ir.actions.act_window">
        <field name="name">Set Currency</field>
        <field name="res_model">purchase.currency.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_purchase_currency_wizard_form"/>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>
</odoo>
