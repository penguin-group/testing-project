<odoo>
    <record id="view_purchase_request_reject_wizard_form" model="ir.ui.view">
        <field name="name">purchase.request.reject.wizard.form</field>
        <field name="model">purchase.request.cancel.wizard</field>
        <field name="arch" type="xml">
            <form>
                <p>This document is already validated.</p>
                <p>Rejecting might affect accounting and you will also lose all validations.</p>
                <br/>
                <p><strong>Do you still want to reject it?</strong></p>

                <field name="purchase_request_id" invisible="1"/>

                <footer>
                    <button name="action_confirm_cancel" string="Reject Document" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Keep Document" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
