<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <record id="create_bill_with_attachment_wizard" model="ir.ui.view">
       <field name="name">bill.with.attachment.view.form</field>
       <field name="model">bill.with.file.attachment.wizard</field>
       <field name="priority" eval="10"/>
       <field name="arch" type="xml">
           <form string="Create Bill with File Attachment">
               <group>
                   <field name="attached_invoice_file" required="True"/>
               </group>
               <footer>
                   <button name="create_bill_with_attachment" string="Upload" type="object"/>
                   <button name="cancel" string="Cancel" special="cancel"/>
               </footer>
           </form>
       </field>
   </record>
</odoo>