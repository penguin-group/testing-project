<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="purchase_order_user_department_rule" model="ir.rule">
            <field name="name">PO - View Relevant Departments - User</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="domain_force">[
                '|',
                '|',
                ('message_partner_ids', 'in', [user.partner_id.id]),
                ('user_id.employee_id.department_id', '=', user.employee_id.department_id.id),
                ('user_id.employee_id.department_id.id', 'in', user.employee_id.department_id.department_descendant_ids.ids)
            ]</field>
            <field name="groups" eval="[(4, ref('purchase.group_purchase_user'))]"/>
            <field name="perm_unlink" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="0"/>
        </record>

        <record id="purchase_order_manager_full_rule" model="ir.rule">
            <field name="name">PO - View All Departments - Manager</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="1"/>
        </record>
    </data>
</odoo>
