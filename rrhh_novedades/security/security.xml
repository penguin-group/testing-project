<odoo>
    <data>

        <record id="hr_novedades_company_rule" model="ir.rule">
            <field name="name">hr_novedades_company_rule</field>
            <field name="model_id" ref="rrhh_novedades.model_hr_novedades"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="hr_novedades_desembolso_account_rule" model="ir.rule">
            <field name="name">hr_novedades_desembolso_account_rule</field>
            <field name="model_id" ref="rrhh_novedades.model_hr_novedades"/>
            <field name="domain_force">[('desembolso', '=', True),('state','in',['done','procesado'])]</field>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name="groups" eval="[(4, ref('account.group_account_user'))]"/>
        </record>
        <record id="hr_novedades_desembolso_hr_rule" model="ir.rule">
            <field name="name">hr_novedades_desembolso_hr_rule</field>
            <field name="model_id" ref="rrhh_novedades.model_hr_novedades"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="groups" eval="[(4, ref('hr_payroll.group_hr_payroll_user'))]"/>
        </record>

    </data>
</odoo>
