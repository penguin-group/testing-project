<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="novedades_batch_form_view" model="ir.ui.view">
            <field name="name">novedades_batch_form_view</field>
            <field name="model">rrhh_novedades.novedades_batch</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button class="oe_highlight" invisible="state != 'draft'" name="button_confirmar" string="Confirmar" type="object"/>
                        <button invisible="state != 'done'" name="button_cancelar" string="Cancelar" type="object"/>
                        <button invisible="state != 'cancel'" name="button_draft" string="Cambiar a borrador" type="object"/>
                        <button invisible="state != 'draft'" name="button_agregar_empleados" string="Agregar empleados" type="object"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field invisible="True" name="desembolso"/>
                                <field name="fecha" readonly="state != 'draft'"/>
                                <field invisible="desembolso == False" name="fecha_desembolso" readonly="state != 'draft'" required="desembolso == True"/>
                                <field name="novedad_tipo_id" readonly="state != 'draft'"/>
                                <field invisible="True" name="periodicidad"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="lines" string="Lineas">
                                <field name="line_ids" readonly="state != 'draft'">
                                    <tree editable="bottom" limit="10">
                                        <field name="employee_id"/>
                                        <field domain="[('employee_id','=',employee_id),('state','!=','cancel')]" name="contract_id"/>
                                        <field name="job_id"/>
                                        <field name="fecha"/>
                                        <field name="monto"/>
                                    </tree></field>
                            </page>
                        </notebook>
                    </sheet>
                </form></field>
        </record>
        <record id="novedades_batch_tree_view" model="ir.ui.view">
            <field name="name">novedades_batch_tree_view</field>
            <field name="model">rrhh_novedades.novedades_batch</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="fecha"/>
                    <field name="name"/>
                    <field name="state"/>
                </tree></field>
        </record>
        <record id="novedades_batch_act_window" model="ir.actions.act_window">
            <field name="name">Lote de novedades</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rrhh_novedades.novedades_batch</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="novedades_batch_act_window" id="menu_novedades_batch" name="Lote de novedades" parent="rrhh_novedades.novedades_root" sequence="90"/>
        <report attachment_use="False" file="Lote de novedades" id="rrhh_novedades.reporte_lote_novedades_action" model="rrhh_novedades.novedades_batch" name="rrhh_novedades.reporte_lote_novedades" report_type="xlsx" string="Lote de novedades"/>
    </data>
    <data>
        <record id="novedades_batch_add_employee_form_view" model="ir.ui.view">
            <field name="name">novedades_batch_add_employee_form_view</field>
            <field name="model">rrhh_novedades.novedades_batch.add_employees</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="batch_id" readonly="True"/>
                            <field name="contract_ids"><tree>
                                    <field name="name"/>
                                    <field name="employee_id"/>
                                    <field name="state"/>
                                </tree></field>
                        </group>
                    </sheet>
                    <footer>
                        <button class="oe_highlight" name="add_employees" string="Agregar Empleados" type="object"/>
                        <button special="cancel" string="Cancelar" type="object"/>
                    </footer>
                </form></field>
        </record>
        <record id="novedades_batch_add_employee_act_window" model="ir.actions.act_window">
            <field name="name">Agregar empleados al Lote de Novedades</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rrhh_novedades.novedades_batch.add_employees</field>
            <field name="view_mode">form</field>
        </record>
    </data>
</odoo>
