<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="planilla_adelantos_form_view" model="ir.ui.view">
            <field name="name">planilla_adelantos_form_view</field>
            <field name="model">rrhh_novedades.planilla_adelantos</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button class="oe_highlight" invisible="state != 'draft'" name="button_confirmar" string="Confirmar" type="object"/>
                        <button invisible="state != 'done'" name="button_cancelar" string="Cancelar" type="object"/>
                        <button invisible="state != 'cancel'" name="button_draft" string="Cambiar a borrador" type="object"/>
                        <button invisible="state != 'draft'" name="button_calcular_saldos" string="Calcular saldos" type="object"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="fecha" readonly="state != 'draft'"/>
                                <field name="user_id" readonly="state != 'draft'"/>
                                <field name="tipo_id" readonly="state != 'draft'" required="True" widget="selection"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="lines" string="Lineas">
                                <field name="line_ids" readonly="state != 'draft'">
                                    <tree editable="bottom" limit="10">
                                        <field name="fecha"/>
                                        <field name="employee_id"/>
                                        <field name="monto"/>
                                        <field name="telefono1"/>
                                        <field name="monto2"/>
                                        <field name="telefono2"/>
                                        <field name="comision"/>
                                        <field name="total_adelanto"/>
                                        <field name="comentarios"/>
                                        <field name="neto_cobrar"/>
                                        <field name="saldo_calculado"/>
                                    </tree></field>
                            </page>
                        </notebook>
                    </sheet>
                </form></field>
        </record>
        <record id="planilla_adelantos_tree_view" model="ir.ui.view">
            <field name="name">planilla_adelantos_tree_view</field>
            <field name="model">rrhh_novedades.planilla_adelantos</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="fecha"/>
                    <field name="tipo_id"/>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </tree></field>
        </record>
        <!-- model.name action window -->
        <record id="planilla_adelantos_act_window" model="ir.actions.act_window">
            <field name="name">Planillas de adelantos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rrhh_novedades.planilla_adelantos</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem action="planilla_adelantos_act_window" id="menu_planilla_adelantos" name="Planillas de adelantos" parent="hr_payroll.menu_hr_payroll_payslips" sequence="100"/>
        <report attachment_use="False" file="Reporte Aqui Pago" id="rrhh_novedades.reporte_adelantos_action" model="rrhh_novedades.planilla_adelantos" name="rrhh_novedades.reporte_aqui_pago" report_type="xlsx" string="Planilla de adelantos"/>
    </data>
</odoo>
