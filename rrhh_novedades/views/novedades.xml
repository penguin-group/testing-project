<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- hr.novedades.tipo -->
    <data>

        <record id="hr_novedades_tipo_view_tree" model="ir.ui.view">
            <field name="name">hr_novedades_tipo_view_tree</field>
            <field name="model">hr.novedades.tipo</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="desembolso"/>
                    <field name="requiere_confirmacion"/>
                </tree>
            </field>
        </record>
        <record id="hr_novedades_tipo_view_form" model="ir.ui.view">
            <field name="name">hr_novedades_tipo_view_form</field>
            <field name="model">hr.novedades.tipo</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="True"/>
                                <field name="periodicidad" attrs="{'invisible':[('tipo_novedad_adelanto_aguinaldo','=',True)],}"/>
                                <field name="periodicidad_periodo" attrs="{'invisible':[('periodicidad','!=','periodico')],}"/>
                                <field name="tipo_cuota" attrs="{
                                    'invisible':[('periodicidad','!=','periodico')],
                                    'required':[('periodicidad','=','periodico')]
                                }"/>
                                <field name="code"/>
                                <field name="interes" attrs="{'invisible':[('tipo_novedad_adelanto_aguinaldo','=',True)],}"/>
                                <field name="desembolso"/>
                                <field name="account_account_desembolso_id" attrs="{
                                    'invisible':[('desembolso','=',False)],
                                    'required':[('desembolso','=',True)],
                                }"/>
                                <field name="account_journal_dest_desembolso_id" attrs="{
                                    'invisible':[('desembolso','=',False)],
                                }"/>
                                <field name="requiere_confirmacion"/>
                                <field name="tipo_novedad_adelanto_aguinaldo"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="novedades_tipo_act_window" model="ir.actions.act_window">
            <field name="name">Tipos de Novedades</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.novedades.tipo</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_novedades_tipo" name="Tipos de Novedades"
                  parent="hr_payroll.menu_hr_salary_configuration" action="novedades_tipo_act_window"
                  sequence="33"/>

    </data>

    <!-- hr.novedades -->
    <data>

        <record id="novedades_tree_view" model="ir.ui.view">
            <field name="name">novedades_tree_view</field>
            <field name="model">hr.novedades</field>
            <field name="arch" type="xml">
                <tree>
                    <header>
                        <button string="Desembolsar pago" type="object" name="button_create_account_payment"/>
                    </header>
                    <field name="tipo_id"/>
                    <field name="fecha"/>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="contract_id"/>
                    <field name="amount_to_show"/>
                    <field name="monto" optional="hide" sum="Total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="novedades_form_view" model="ir.ui.view">
            <field name="name">novedades_form_view</field>
            <field name="model">hr.novedades</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="desbloquear_monto" invisible="True"/>
                        <field name="state" widget="statusbar"/>
                        <button string="Confirmar" type="object" name="button_confirmar" class="oe_highlight"
                                attrs="{'invisible':[('state','!=','draft')]}"/>
                        <button string="Cancelar" type="object" name="button_cancelar"
                                attrs="{'invisible':[('state','!=','done')]}"/>
                        <button string="Cambiar a borrador" type="object" name="button_draft"
                                attrs="{'invisible':[('state','!=','cancel')]}"/>
                        <button string="Desbloquear monto" type="object" name="button_desbloquear_monto"
                                attrs="{'invisible':['|','|',('state','!=','draft'),('periodicidad','!=','periodico'),'&amp;',('periodicidad','=','periodico'),('desbloquear_monto','=',True)]}"/>
                        <button string="Desembolsar pago" type="object" name="button_create_account_payment"
                                attrs="{'invisible':['|','|','|',('desembolso','=',False),('state','not in',['done', 'procesado']),('payment_id','!=',False),('nro_cuota','>',1)]}"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button name="action_show_account_payment" type="object" groups="account.group_account_readonly" class="oe_stat_button"
                                    attrs="{'invisible': [('payment_id', '=', False)]}">
                                <div role="img" class="fa fa-fw fa-money o_button_icon text-success" aria-label="Off Till" title="Ver Pago"/>
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">
                                        Ver Pago
                                    </span>
                                </div>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Pago Creado" bg_color="bg-success" attrs="{'invisible': [('payment_id', '=', False)]}"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="tipo_id" attrs="{'readonly':[('state','!=','draft')]}" required="True" widget="selection"/>
                                <field name="payment_id" invisible="True"/>
                                <field name="desembolso" invisible="True"/>
                                <field name="periodicidad" invisible="True"/>
                                <field name="tipo_cuota" invisible="True"/>
                                <field name="es_cuota" invisible="True"/>
                                <field name="fecha" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="fecha_desembolso" attrs="{
                                    'invisible':['|',('desembolso','=',False),'&amp;',('desembolso','=',True),('nro_cuota','>',1)],
                                    'required':[('desembolso','=',True),('nro_cuota','=',1)],
                                    'readonly':[('state','!=','draft')]}
                                "/>
                                <field name="employee_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="contract_id" attrs="{'readonly':['|',('state','!=','draft'),('employee_id','=',False)]}"
                                       domain="[('employee_id','=',employee_id),('state','=','open')]"/>
                                <field name="readonly_monto" invisible="True"/>
                                <field name="monto" attrs="{
                                    'readonly':[('readonly_monto','=',True)],
                                }"/>
                                <field name="monto_total" attrs="{
                                   'readonly':[('state','!=','draft')],
                                   'invisible':['|',('periodicidad','!=','periodico'),'&amp;',('periodicidad','=','periodico'),('tipo_cuota','!=','monto_fijo')],
                                   'required':[('periodicidad','=','periodico')],
                                }"/>
                                <field name="monto_objetivo" attrs="{
                                   'readonly':[('state','!=','draft')],
                                   'invisible':['|',('periodicidad','!=','periodico'),'&amp;',('periodicidad','=','periodico'),('tipo_cuota','!=','porcentaje_sobre_bruto')],
                                   'required':[('periodicidad','=','periodico')],
                                }"/>
                                <field name="monto_amortizado" attrs="{
                                   'readonly':[('state','!=','draft')],
                                   'invisible':['|',('periodicidad','!=','periodico'),'&amp;',('periodicidad','=','periodico'),('tipo_cuota','!=','porcentaje_sobre_bruto')],
                                   'required':[('periodicidad','=','periodico')],
                                }"/>
                                <field name="porcentaje_a_descontar" attrs="{
                                   'readonly':[('state','!=','draft')],
                                   'invisible':['|',('periodicidad','!=','periodico'),'&amp;',('periodicidad','=','periodico'),('tipo_cuota','!=','porcentaje_sobre_bruto')],
                                   'required':[('periodicidad','=','periodico'),('tipo_cuota','=','porcentaje_sobre_bruto')],
                                }"/>
                                <field name="fecha_inicio" attrs="{
                                   'readonly':[('state','!=','draft')],
                                   'invisible':[('periodicidad','!=','periodico')],
                                   'required':[('periodicidad','=','periodico')],
                                }"/>
                                <field name="cant_cuotas" attrs="{
                                   'readonly':[('state','!=','draft')],
                                   'invisible':['|',('periodicidad','!=','periodico'),'&amp;',('periodicidad','=','periodico'),('tipo_cuota','!=','monto_fijo')],
                                   'required':[('periodicidad','=','periodico')],
                                }"/>
                                <field name="nro_cuota" attrs="{
                                   'readonly':True,
                                   'invisible':[('periodicidad','!=','periodico')],
                                }"/>
                                <field name="comentarios" attrs="{
                                    'readonly':[('state','!=','draft')],
                                    'invisible':[('periodicidad','=','periodico'),('tipo_cuota','=','porcentaje_sobre_bruto')],
                                }"/>
                                <field name="payslip_id" attrs="{
                                   'readonly':True,
                                   'invisible':[('payslip_id','=',False)]
                                }"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="novedades_search_view" model="ir.ui.view">
            <field name="name">novedades_search_view</field>
            <field name="model">hr.novedades</field>
            <field name="arch" type="xml">
                <search>
                    <!--                    <field name="name" string="string" domain="[()]"/>-->
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <field name="contract_id" filter_domain="[('contract_id','ilike',self)]"/>
                    <field name="employee_id" filter_domain="[('employee_id','ilike',self)]"/>
                    <field name="tipo_id" filter_domain="[('tipo_id','ilike',self)]"/>
                    <field name="name" filter_domain="['|','|'('name','ilike',self),('contract_id','ilike',self),('employee_id','ilike',self)]"/>
                    <filter string="Estado" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Empleado" name="group_by_employee_id" context="{'group_by': 'employee_id'}"/>
                    <filter string="Tipo de Novedad" name="group_by_tipo_id" context="{'group_by': 'tipo_id'}"/>
                </search>
            </field>
        </record>

        <record id="novedades_act_window" model="ir.actions.act_window">
            <field name="name">Novedades</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.novedades</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.server" id="action_cancelar_novedades">
            <field name="name">Cancelar</field>
            <field name="binding_model_id" ref="rrhh_novedades.model_hr_novedades"/>
            <field name="model_id" ref="rrhh_novedades.model_hr_novedades"/>
            <field name="state">code</field>
            <field name="code"><![CDATA[
if records:
    records.button_cancelar()
            ]]></field>
        </record>
        <record model="ir.actions.server" id="action_draft_novedades">
            <field name="name">Cambiar a borrador</field>
            <field name="binding_model_id" ref="rrhh_novedades.model_hr_novedades"/>
            <field name="model_id" ref="rrhh_novedades.model_hr_novedades"/>
            <field name="state">code</field>
            <field name="code"><![CDATA[
if records:
    records.button_draft()
            ]]></field>
        </record>

        <menuitem name="Novedades" id="rrhh_novedades.novedades_root" parent="hr_payroll.menu_hr_payroll_payslips" sequence="90"/>
        <menuitem id="menu_novedades" name="Novedades" parent="rrhh_novedades.novedades_root" action="novedades_act_window" sequence="100"/>
        <menuitem id="menu_novedades_desembolso_account" name="Novedades - Desembolsos" parent="account.menu_finance_payables"
                  action="novedades_act_window" sequence="100"/>

    </data>

    <!-- hr.novedades.desembolso_wizard -->
    <data>

        <record id="novedades_desembolso_wizard_form_view" model="ir.ui.view">
            <field name="name">novedades_desembolso_wizard_form_view</field>
            <field name="model">hr.novedades.desembolso_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="novedades_ids" widget="many2many_tags"/>
                        <field name="account_journal_id"/>
                        <field name="confirm_payment"/>
                    </group>
                    <footer>
                        <button string="Crear Pagos" class="oe_highlight" type="object" name="button_create_account_payment"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="novedades_desembolso_wizard_action_window">
            <field name="name">Crear Pagos</field>
            <field name="res_model">hr.novedades.desembolso_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>