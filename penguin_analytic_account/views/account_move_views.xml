<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_line_tree_inherit" model="ir.ui.view">
            <field name="name">account.move.line.tree.analytic</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <!-- Inserción del nuevo campo después de analytic_distribution -->
                <xpath expr="//field[@name='analytic_distribution']" position="after">
                    <field name="analytic_account_names"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>