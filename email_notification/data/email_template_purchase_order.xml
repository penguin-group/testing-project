<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mail_template_notification_po" model="mail.template">
            <field name="name">Purchase Order Above 25k USD</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="subject">Purchase Order {{ object.name }} above 25k USD</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="email_to">${email_to or ''}</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="width:100%; margin:0px auto;"><tbody>
                    <tr><td valign="top" style="text-align: left; font-size: 14px;">
                        <p>Hello,</p>
                        <p>
                          A new Purchase Order <strong> <t t-esc="object.name"></t></strong> has been confirmed with a total value of
                          <strong><t t-esc="ctx.get('amount_in_usd')"></t></strong>.
                        </p>

                        <p>
                          You can view the full details by accessing the Purchase Order record in Odoo.
                        </p>

                        <p>URL: <t t-esc="ctx.get('record_url')"></t></p>

                        <p>
                          If no further action is needed, you may disregard this message.
                        </p>

                        <p>Best regards,<br/>
                        The Finance Team</p>
                    </td></tr>
                </tbody></table>
            </field>
        </record>
    </data>
</odoo>