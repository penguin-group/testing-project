    <record id="po_email_notification_action" model="ir.actions.act_window">
        <field name="name">PO Email Notification</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">po.mail.notification</field>
        <field name="view_mode">list,form</field>
