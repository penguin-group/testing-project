<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data >
        <!-- Add you code here -->
        <!-- res.company inherit form view -->
        <record id="view_company_form" model="ir.ui.view">
            <field name="name">view_company_form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">

                    <field name="secondary_currency_id"/>
                    <field name="consolidated_currency_id"/>
                    <button string="Recalcular valores secundarios y consolidados" type="object" name="compute_sec_cons_values" groups="base.group_no_one"/>


                </xpath>

            </field>
        </record>
    </data>
</odoo>