<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        <!-- account.move inherit form view -->
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.inherit.view.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@id='aml_tab']/field[@name='line_ids']/tree" position="inside">
                    <field name="secondary_currency_id" optional="hide"/>
                    <field name="tipo_cambio" optional="hide"/>
                    <field name="debit_ms" optional="hide"/>
                    <field name="credit_ms" optional="hide"/>
                    <field name="balance_ms" optional="hide"/>
                    <field name="consolidated_currency_id" optional="hide"/>
                    <field name="debit_cs" optional="hide"/>
                    <field name="credit_cs" optional="hide"/>
                    <field name="balance_cs" optional="hide"/>
                </xpath>
            </field>
        </record>
        <!-- account.move.line inherit tree view -->
        <record id="view_move_line_tree" model="ir.ui.view">
            <field name="name">account.move.line.inherit.view.tree</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="tipo_cambio" optional="hide"/>
                    <field name="secondary_currency_id" optional="hide"/>
                    <field name="debit_ms" sum="Total Débito MS" optional="hide"/>
                    <field name="credit_ms" sum="Total Crédito MS" optional="hide"/>
                    <field name="balance_ms" sum="Total Balance MS" optional="hide"/>
                    <field name="consolidated_currency_id" optional="hide"/>
                    <field name="debit_cs" sum="Total Débito CS" optional="hide"/>
                    <field name="credit_cs" sum="Total Crédito CS" optional="hide"/>
                    <field name="balance_cs" sum="Total Balance CS" optional="hide"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>