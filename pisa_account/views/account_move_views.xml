<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_move_form_inherited" model="ir.ui.view">
            <field name="name">view.move.form.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="required">move_type in ['in_invoice', 'in_refund']</attribute>
                </xpath>
                
                <xpath expr="//field[@name='invoice_date']" position="attributes">
                    <attribute name="required">move_type in ['in_invoice', 'in_refund']</attribute>
                </xpath>

                <xpath expr="//header" position="inside">
                    <button string="Edit Secondary Currency Rate" 
                        name="edit_secondary_currency_rate" 
                        type="object" 
                        groups="account.group_account_manager" 
                        invisible="(not company_secondary_currency_id and company_id.country_code != 'PY') or move_type != 'in_invoice'"
                    />
                </xpath>

            </field>
        </record>

        <record id="view_move_form_inherited_l10n_py" model="ir.ui.view">
            <field name="name">view.move.form.inherited.l10n.py</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="l10n_py.view_move_form_inherited"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='supplier_invoice_authorization_id']" position="attributes">
                    <attribute name="required">move_type in ['in_invoice', 'in_refund']</attribute>
                </xpath>
            </field>
        </record>


    
    </data>
    

</odoo>
