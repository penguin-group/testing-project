<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <record id="view_move_form_inherited" model="ir.ui.view">
            <field name="name">view.move.form.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="required">move_type in ['in_invoice', 'in_refund']</attribute>
                </xpath>
                
                <xpath expr="//field[@name='invoice_date']" position="attributes">
                    <attribute name="required">move_type in ['in_invoice', 'in_refund']</attribute>
                </xpath>

                <xpath expr="//header" position="inside">
                    <field name="company_secondary_currency_id" invisible="1"/>
                    <button string="Edit Secondary Currency Rate" 
                        name="edit_secondary_currency_rate" 
                        type="object" 
                        groups="account.group_account_manager,account.group_account_invoice" 
                        invisible="(not company_secondary_currency_id and company_id.country_code != 'PY') or move_type != 'in_invoice' or state != 'draft' or currency_id == company_secondary_currency_id"
                    />
                </xpath>
                <!--
                <xpath expr="//label[@for='journal_id']" position="attributes">
                    <attribute name="groups">account.group_account_readonly,pisa_account.group_account_sr_finance</attribute>
                </xpath>
                -->

                <xpath expr="//div[@name='journal_div']" position="attributes">
                    <attribute name="groups">account.group_account_readonly,base.group_multi_currency,pisa_account.group_account_sr_finance</attribute>
                </xpath>

                <xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name="groups">account.group_account_readonly,pisa_account.group_account_sr_finance</attribute>
                </xpath>
                
                <xpath expr="//page[@id='aml_tab']" position="attributes">
                    <attribute name="groups">account.group_account_readonly,pisa_account.group_account_sr_finance</attribute>
                </xpath>

            </field>
        </record>



        <record id="view_move_form_inherited_pisa" model="ir.ui.view">
            <field name="name">view.move.form.inherited.pisa</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="l10n_py.view_move_form_inherited"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='edit_currency_rate']" position="attributes">
                    <attribute name="groups">account.group_account_manager,pisa_account.group_account_jr_accountant,pisa_account.group_account_sr_accountant</attribute>
                </xpath>

            </field>
        </record>

    
</odoo>
