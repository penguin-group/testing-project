<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherited_pisa_account" model="ir.ui.view">
            <field name="name">view.move.form.inherited.pisa.account</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//button[@name='action_post']" position="attributes">
                    <attribute name="groups">account.group_account_user,pisa_account.group_account_head_finance</attribute>
                </xpath>

                <xpath expr="//button[2]" position="attributes">
                    <attribute name="groups">account.group_account_user,pisa_account.group_account_head_finance</attribute>
                </xpath>
                
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="required">move_type in ['in_invoice', 'in_refund']</attribute>
                </xpath>
                
                <xpath expr="//field[@name='invoice_date']" position="attributes">
                    <attribute name="required">move_type in ['in_invoice', 'in_refund']</attribute>
                </xpath>

                <xpath expr="//header" position="inside">
                    <field name="company_secondary_currency_id" invisible="1"/>
                    <button string="Edit Secondary Currency Rate"
                        name="edit_secondary_currency_rate"
                        type="object"
                        groups="account.group_account_manager,account.group_account_invoice"
                        invisible="not show_edit_secondary_currency_rate"
                    />
                </xpath>

                <xpath expr="//label[@for='journal_id']" position="attributes">
                    <attribute name="groups">account.group_account_readonly,pisa_account.group_account_jr_accountant,pisa_account.group_account_sr_finance</attribute>
                </xpath>

                <xpath expr="//label[@for='currency_id']" position="attributes">
                    <attribute name="groups">!account.group_account_readonly,!pisa_account.group_account_jr_accountant,!pisa_account.group_account_sr_finance,base.group_multi_currency</attribute>
                </xpath>

                 <xpath expr="//div[@name='journal_div']" position="attributes">
                    <attribute name="groups">account.group_account_readonly,pisa_account.group_account_jr_accountant,pisa_account.group_account_sr_finance,base.group_multi_currency</attribute>
                </xpath>

                <xpath expr="//div[@name='journal_div']/field[@name='journal_id']" position="attributes">
                    <attribute name="groups">account.group_account_readonly,pisa_account.group_account_jr_accountant,pisa_account.group_account_sr_finance</attribute>
                </xpath>

                <xpath expr="//div[@name='journal_div']/span[1]" position="attributes">
                    <attribute name="groups">account.group_account_readonly,pisa_account.group_account_jr_accountant,pisa_account.group_account_sr_finance</attribute>
                </xpath>

                <xpath expr="//div[@name='currency_div']" position="attributes">
                    <attribute name="groups">base.group_multi_currency,pisa_account.group_account_jr_accountant,pisa_account.group_account_sr_finance</attribute>
                </xpath>

                <xpath expr="//notebook/page/field/list/field[@name='account_id']" position="attributes">
                    <attribute name="groups">account.group_account_readonly,pisa_account.group_account_jr_accountant</attribute>
                </xpath>

                <xpath expr="//page[@id='aml_tab']" position="attributes">
                    <attribute name="groups">account.group_account_readonly,pisa_account.group_account_jr_accountant,pisa_account.group_account_sr_finance</attribute>
                </xpath>

            </field>
        </record>


        <record id="view_move_form_inherited_pisa_refactor" model="ir.ui.view">
            <field name="name">view.move.form.inherited.pisa.refactor</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account_custom_currency_rate.view_account_move_form_inherited"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='edit_currency_rate']" position="attributes">
                    <attribute name="groups">account.group_account_manager,pisa_account.group_account_jr_accountant,pisa_account.group_account_sr_accountant</attribute>
                    <attribute name="invisible">not show_edit_primary_currency_rate</attribute>
                </xpath>

            </field>
        </record>


    </data>
</odoo>
