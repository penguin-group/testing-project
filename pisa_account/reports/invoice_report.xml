<odoo>
  <data>
        
        <template id="invoice_document" 
            inherit_id="l10n_py.invoice_document">
           
            <xpath expr="//table[8]" position="replace">
                <style>
                    .lineaDetalle { font-weight: normal !important; font-size:13px;}
                </style> 
                <table class="table">
                    <tr>
                        <td style="width:20%">
                            <div style="display:table-cell;vertical-align:top;">
                                <img t-att-src="image_data_uri(o.payment_info_qr_code)" 
                                    style="max-width:150px;max-height:150px;margin-left:15px"/>
                            </div>
                        </td>
                        <td style="font-size:10px;width:80%;padding:2px;color:black">
                            <div style="display:table-cell;vertical-align:top">
                              <span t-field="o.narration"></span>
                            </div>
                        </td>
                    </tr>
                </table>
            </xpath>

        </template>
  </data>
</odoo>