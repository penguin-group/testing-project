<?xml version="1.0" encoding="UTF-8" ?>
<templates>
        <!-- currencies filter for all other report -->
        <t t-name="account_report_multi_currency.currencyReportFiltersCustomizable" t-inherit="account_reports.AccountReportFiltersCustomizable"  t-inherit-mode="extension">
            <xpath expr="." position="inside">
                <t t-if="'currencies' in controller.options">
                    <div id="filter_currencies">
                        <t t-call="account_report_multi_currency.AccountReportFilterCurrencies_data"/>
                    </div>
                </t>
            </xpath>
        </t>
        <!-- currencies filter for Journal Report -->
        <t t-name="account_report_multi_currency.currencyReportFiltersCustomizablecurrencies" t-inherit="account_reports.JournalReportFilters" t-inherit-mode="extension">
            <xpath expr="." position="inside">
                <t t-if="'currencies' in controller.options">
                    <div id="filter_currencies">
                        <t t-call="account_report_multi_currency.AccountReportFilterCurrencies_data"/>
                    </div>
                </t>
            </xpath>    
        </t>
</templates>
