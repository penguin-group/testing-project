<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_move_line_form_inherit" model="ir.ui.view">
            <field name="name">view.move.line.form.inherit</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <field name="balance" position="after">
                    <field name="secondary_balance" readonly="1"/>
                </field>
            </field>
        </record>

        <record id="view_move_line_pivot_inherit" model="ir.ui.view">
            <field name="name">view.move.line.pivot.inherit</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_pivot"/>
            <field name="arch" type="xml">
                <field name="balance" position="after">
                    <field name="secondary_balance" type="measure"/>
                </field>
            </field>
        </record>

        <record id="view_move_line_tree_inherit" model="ir.ui.view">
            <field name="name">view.move.line.tree.inherit</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <field name="balance" position="after">
                    <field name="secondary_balance" sum="Total Secondary Balance" optional="hide" readonly="1"/>
                </field>
            </field>
        </record>

        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">view.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="balance" position="after">
                    <field name="balance" optional="hide"/>
                    <field name="secondary_balance" optional="hide"/>
                </field>
            </field>
        </record>

        <record id="view_move_form_currency_rate_inherit" model="ir.ui.view">
            <field name="name">view.move.form.currency.rate</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="invoice_currency_rate.view_move_form_currency_rate"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='currency_conversion_div']" position="after">
                    <div name="currency_conversion_div"
                            class="d-flex text-muted float-start"
                            invisible="(currency_id == company_secondary_currency_id) or not company_secondary_currency_id">
                        <span>1 </span>
                        <field name="company_secondary_currency_id" readonly="True" options="{'no_open': True}"/>
                        <span> = </span>
                        <field name="invoice_secondary_currency_rate" digits="[12,6]" readonly="True"/>
                        <span> </span>
                        <field name="currency_id" readonly="True" options="{'no_open': True}"/>
                    </div>
                </xpath>
            </field>
        </record>
    
    </data>
    

</odoo>
